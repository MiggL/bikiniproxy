/**
* PLUGIN INITS
* Place all init calls for jQuery plugins or other below.
*/
(function($){
	// Department spotlight slider.
	$('#dept-slider').slick({
		autoplay		: true,
		autoplaySpeed	: 10000,
		speed			: 500,
		dots			: true,
		arrows			: false,
		onInit			: function(slick){
			$('#dept-slider .caption').css({'bottom':'-50px'});
			$('#dept-slider .caption').animate({'bottom': 0});	
		},
		onBeforeChange	: function(){
			$('#dept-slider .caption').css({'bottom':'-50px'});	
		},
		onAfterChange	: function(){
			$('#dept-slider .caption').animate({'bottom': 0});	
		}
	});
})(jQuery);

/**
* Do work.
*/
(function($){
	var nav_elem = $('#fixed-nav-dept');
	var main_content = $('#main-content');
	
	// if the content is larger than the navigation adjust the height.
	if(nav_elem.height() < main_content.height()){
		nav_elem.height(main_content.height());
	}
})(jQuery);