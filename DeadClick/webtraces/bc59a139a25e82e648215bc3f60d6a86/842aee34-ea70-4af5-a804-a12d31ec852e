function slide(){
	$('#next').click();
}
var intervalId = window.setInterval(slide, 2000);

$(document).ready(function(){
	$('.carousel-partners').jcarousel({
		auto: 2,
		size: 3,
		scroll: 1,
		wrap: 'circular'
	});
	
	
	var asideHeight = $('#carbox-last-posts').height();
	if(asideHeight > 265){
		$('.widget-area aside').height(asideHeight + 65);
	}
	
});

$('.carousel ul').cycle({ 
    fx:     'fade',
    timeout: 4000 
});