var $text = $j('.menu-fixed__text'),
    $item = $j('.menu-fixed__item'),
    $cont = $j('.menu-fixed-container'),
    $icon = $j('.menu-fixed__icon'),
    $open = $j('.menu-fixed__open');

$j(document).ready(function () {

    var swiper = new Swiper('.main-swiper', {
        pagination: '.swiper-pagination',
        nextButton: '.swiper-button-next',
        prevButton: '.swiper-button-prev',
        slidesPerView: 1,
        simulateTouch: false,
        paginationClickable: true,
        spaceBetween: 0,
        loop: true,
        autoplay: 4000
    });

    // $cont.mouseenter(function() {
    //   if ($cont.offset().top >= 400) {
    //     $item.addClass('menu-fixed__item-open');
    //   }
    // });
    // $cont.mouseleave(function() {
    //   if ($cont.offset().top >= 400) {
    //     $item.removeClass('menu-fixed__item-open');
    //   }
    // });
    //
    // $j(window).scroll(function(){
    //   if ($cont.offset().top >= 400) {
    //     $item.removeClass('menu-fixed__item-open');
    //   } else {
    //     $item.addClass('menu-fixed__item-open');
    //   };
    // });

    $cont.hover(function() {
      $item.toggleClass('menu-fixed__item-open');
    })
    $j('#reel_home .info .car').mouseenter(function(){
        $j(this).find('.menu_car').stop(true,true).fadeIn();

        $j('#reel_home .bg img').css('z-index', 1 );

        //$j('#reel_home .bg img[alt=' + $j(this).attr('id') + ']').css('z-index', 100 ).fadeIn(200,'easeOutQuad');
        $j('#reel_home img[alt=' + $j(this).attr('id') + ']').css('z-index', 100 ).animate({opacity: 1}, 250,'easeInOutQuad');
    });

    $j('#reel_home .info .car').mouseleave(function(){
        $j(this).find('.menu_car').stop(true,true).fadeOut();
        //$j('#reel_home .bg img').stop().fadeOut();
        $j('#reel_home .bg img').stop().animate({opacity: 0}, 250,'easeInOutQuad');
    });
});
