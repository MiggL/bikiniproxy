    <script type="text/javascript">

  /* Returns the value in a query string for
   * term "name" passed in.
   * For Example URL?q=foo&usr=bar
   * name = 'q', returns 'foo'
   * name =
   */
  function getParameterByName(name) {
    name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
    var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
      results = regex.exec(location.search);
    return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
  }
  /* Returns the number of words in a string
   */
  function countWords(s) {
    s = s.replace(/(^\s*)|(\s*$)/gi, ""); //exclude  start and end white-space
    s = s.replace(/[ ]{2,}/gi, " "); //2 or more space to 1
    s = s.replace(/\n /, "\n"); // exclude newline with a start spacing
    return s.split(' ').length;
  }

  var href = window.location.href;

  var pathArray = window.location.pathname.split( '/' );
  var pageName = '';
  for (var i = pathArray.length - 1; i >= 0; i--) {
    if (pathArray[i] != '') {
      pageName = pathArray[i];
      break;
    }
  };

  if ($('span.author').length != 0) {
    var author = $('span.author a').text();
  } else {
    var author = '';
  }
  if ($('.news-entry-content').length != 0) {
    var postLength = countWords($('.news-entry-content').text());
  }
  if ($('.error-title-wrapper').length != 0) {
    errorCode = $('.error-title-wrapper legend').text().split(' ')[0];
    if (errorCode == '404') {
      var errorMessage = 'Something went wrong. Page Not Found'
    } else if (errorCode == '500') {
      var errorMessage = 'Something went wrong. Server Error'
    } else {
      var errorMessage = 'An Unknown Error Occurred';
    }
  } else {
    var errorCode = '';
    var errorMessage = '';
  }

  /* Listings variables
   * Collects search information, term, results,
   * and sort to pass into the "digitalLayer" blob.
   */
  if ($('.big-search').length != 0) {
    var searchResults = $('h1 strong:first').text();
  } else {
    var searchResults = '';
  }
  var searchValue = getParameterByName('q');
  var pageNumber = ('page_number');
  if (pageNumber == '' && searchValue != '') {
    pageNumber = '1';
  }
  var searchOrder = getParameterByName('order_by');
  if (searchOrder == '' && searchValue != '') {
    searchOrder = 'relevance';
  }
  /* Category variables */
  var pageType = "news";
  var categories = [];

  /* Query Params */
  var pairs = location.search.slice(1).split('&');
  var result = {};
  pairs.forEach(function(pair) {
    pair = pair.split('=');
    result[pair[0]] = decodeURIComponent(pair[1] || '');
  });
  queryParams = JSON.parse(JSON.stringify(result));

  /* Blob to pass for Adobe Analytics */

    var digitalData = {
        user:[{
          profile:[{
            profileInfo:{
              sid:"",
              hid:"",
              registered:"", // true - false if the user is registered
              loggedIn:"", // true - false if the user is logged In
              donor:"", // true - false if the user is a donor
              donorLevel: "", // list the donor level
              lastDonationDate: "",
              lastDonationAmount: "",
              donationMedium: "", //expected vlaues are "online" or "offline"
              voter: "", // true - false if the user is a voter
              voterRegistration: "", // true - false if the user is a registered voter
              //primaryVoter: "{--{primaryVoter}--}" // true - false if the user is a primary voter
            }
          }]
        }],//end user
        page: {
          events: {
            category: "",
            action: ""
          },
          pageInfo: {
            pageID: window.location.pathname, //use this for the content slug
            pageName: pageName, //pageName (last portion ONLY)
            //title: title, //Optional: set to the pages title
            author: author, //Author's name
            postLength: postLength, //word count
            destinationURL: href, //window.document.location.href
            referringURL: document.referrer, //window.referrer
            sysEnv: WURFL.form_factor, // mobile, tablet, desktop
            errorType: errorCode, // 404, 500
            errorMessage: errorMessage // an error code(preferably) or the text of the error message
          }
        }
      }; //end digitalData
</script>

