//loading popup

$.urlParam = function(name){
	var results = new RegExp('[\\?&]' + name + '=([^&#]*)').exec(window.location.href);
	if (!results) { return 0; }
	return results[1] || 0;
}

function loadChatWin(){
	//loads popup only if it is disabled
	if(chatwinStatus == 0){
		$("#backgroundChatDisc").css({
			"opacity": "0.7"
		});
		$("#backgroundChatDisc").fadeIn("slow");
		$("#chatDisclaimer").fadeIn("slow");
		$("#chatDiscWin").fadeIn("slow");
		chatwinStatus = 1;

	}
}
