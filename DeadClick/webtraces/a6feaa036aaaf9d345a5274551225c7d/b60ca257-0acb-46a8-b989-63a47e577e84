jQuery(function() {
	jQuery(".dropdown-menu").hover(function() {
		jQuery('.dropdown').addClass("hover");
	}, function() {
		jQuery('.dropdown').removeClass("hover");
	});

	jQuery(window).bind('load', function() {
		detectBrowser();
	});
	jQuery(window).bind('load', function() {
		detectBrowser();
	});



	if (jQuery(window).width() > 767) {
		setEqualHeight(jQuery(".equal-columns"));
	}
	jQuery(window).resize(function() {
		if (jQuery(window).width() < 767) {
			jQuery(".equal-columns").removeAttr('style');
		} else {
			setEqualHeight(jQuery(".equal-columns"));
		}
	});
	
	if (jQuery(window).width() > 767) {
		setEqualHeight(jQuery(".equal-height"));
	}
	$(window).bind('resize orientationchange', function() {
    jQuery(".equal-height").removeAttr('style');
	setEqualHeight(jQuery(".equal-height"));
	});

});

function setEqualHeight(columns) {
	var tallestColumn = 0;
	columns.each(function() {
		currentHeight = jQuery(this).height();
		if (currentHeight > tallestColumn) {
			tallestColumn = currentHeight;
		}
	});
	columns.height(tallestColumn);
}



function detectBrowser() {
	
}
