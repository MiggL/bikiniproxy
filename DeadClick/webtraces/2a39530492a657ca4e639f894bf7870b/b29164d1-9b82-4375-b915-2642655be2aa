$(document).ready(function(){

    $(".nav_top li:first-child").addClass('noborder');
    $(".nav_group a:last-child").addClass('last');

    $(document).ready(function(){
        $(".imgswap .selected img").attr("src", $(".nav_group .selected img").attr("src").replace(/.png/, "_on.png"));
        $(".imgswap").attr("src", $(".nav_group .selected img").attr("src").replace(/.png/, "_on.png"));
    })



}) // READY

// nav_group over swap image

$(function() {
    $(".imgswap img").hover(

        function () {
            if(!$(this).parent().hasClass('selected')){
                $(this).attr("src", $(this).attr("src").replace(/.png/, "_on.png"));
            }
        },
        function () {
            if(!$(this).parent().hasClass('selected')){
                $(this).attr("src", $(this).attr("src").replace(/_on.png/, ".png"));
            }
        }
    );
});

function EqualHeightLeadim() {
    var colrightH = $( ".colRight").css( "height" );
    $('.colLeft').css('min-height', colrightH);
}





