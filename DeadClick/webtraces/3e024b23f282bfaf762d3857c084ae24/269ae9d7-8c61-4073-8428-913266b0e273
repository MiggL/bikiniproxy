(function(){function d(){e.toggleClass("active");f.toggleClass("active")}var g=$("#searchfield").attr("value"),h=$("html,body"),k=$("#searchfield"),m=$(".video-channels"),b=$(".current-slide-info");b.find(".current-slide-social");var l=b.find(".current-slide-transcript"),f=b.find(".show-transcript-button"),e=b.find(".hide-transcript-button"),b=$(".scroll-video"),c=$(".edition-selector");(function(){var a=$("body"),b=$(window);1050>=parseInt(b.height(),10)&&0<$(".current-channel-container").length?
a.addClass("small-video-player"):a.removeClass("small-video-player")})();k.on("focus",function(a){a=$(a.target);$.trim(a.val())==g&&a.val("")});k.on("blur",function(a){a=$(a.target);""==$.trim(a.val())&&a.val(g)});f.on("click",function(){l.slideDown(500);d()});e.on("click",function(){l.slideUp(500);d()});b.on("click",function(a){a.preventDefault();a=m.offset().top;h.animate({scrollTop:a},500)});c.on("click",function(){"undefined"!==typeof $(".edition")&&c.addClass("active")});h.on("click touchstart mouseenter",
function(a){0===$(a.target).closest(".edition-selector").length&&"undefined"!==typeof $(".edition")&&c.removeClass("active")})})();