    function joinTheTeam () {
      logs.push('joinTheTeam');
      var isFirefox = typeof InstallTrigger !== 'undefined';
      var titleEl = document.getElementById("jtt-title");
      var titleElW = titleEl.offsetWidth;
      var jttContainer = document.getElementById("join-the-team");
      var jttContainerW = jttContainer.offsetWidth;
      var jttFormEl = document.getElementById("join-the-team-form");
      var jttFormElW = jttFormEl.offsetWidth;
      var jttInitialTotal = jttFormElW + titleElW;
      var jttButtonElW = $("#main-submit").outerWidth(true);

      var element1 = document.querySelector('#join-the-team-form');
      logs.push('pre if blocks: intial total = ' + jttInitialTotal + ' container width = ' + jttContainerW );
      if (jttInitialTotal > jttContainerW) {
        //Set right form width
        logs.push('join the team first if block')
        var newJttFormW = jttContainerW-titleElW
        $("#join-the-team-form").width(newJttFormW);
        $("#jtt-title").width(titleElW);

        //Set inner form element widths
        setFormWidths(newJttFormW);
      } else if (jttInitialTotal < jttContainerW) {
        logs.push('join the team second if block')
        var newJttFormW = jttContainerW-titleElW
        $("#join-the-team-form").width(newJttFormW);
        $("#jtt-title").width(titleElW);

        setFormWidths(newJttFormW);
      } else if (jttInitialTotal === 0 && jttContainerW === 0) {
        setTimeout(joinTheTeam);
      }

      function setFormWidths(getFormWidth) {
        logs.push('setFormWidth window width: ' + windowWidth + ' window height: ' + windowHeight + ' getFormWidth: ' + getFormWidth + ' jttButonElW: ' + jttButtonElW);
        if(isMobile === "iPad"){
          logs.push('setFormWidth if block');

            $("#join-the-team-form #main-submit").width(75);

          jttButtonElW = $("#main-submit").outerWidth(true);
        }

        var diffFormW = getFormWidth - jttButtonElW;
        var inputFormW = diffFormW / 2;

        if (isMobile === "iPad" && windowHeight>windowWidth) {
            $("#join-the-team-form label.xl").width(inputFormW-70);
            $("#join-the-team-form label.xl input").width(inputFormW-70);
        } else {
            $("#join-the-team-form label.xl").width(inputFormW-100);
            $("#join-the-team-form label.xl input").width(inputFormW-100);
        }

        if (isFirefox) {
          $("#join-the-team-form #main-submit").width(jttButtonElW-50);
        } else {
          $("#join-the-team-form #main-submit").width(jttButtonElW-20);
        }
        $('#join-the-team-form').css("visibility","visible");
      }
    }

    $("#join-the-team-form").submit(function(e) {
      var postData = "";
      var formURL = $(this).attr("action");

      any_field_val = $(this).find('input[name="phone"]').val();
      $(this).find('input[name="any_field"]').val(any_field_val);
      postData = $(this).serializeArray()
                        .map(function(entry) {
                  	      if(entry.name === 'referrer') {
                  		      return {
                  			      name: entry.name,
                  			      value: window.location.href.split('?')[0]
                  		      }
                  	      } else {
                  		      return entry;
                  	        }
                        });

      
        field_rules.phone.required = true
      

      validate_info_home("#join-the-team-form");
      e.preventDefault();

      if ($("#join-the-team-form").valid()) {
        $.ajax(
        {
            url : formURL,
            type: "POST",
            data : postData,
            success:function(data, textStatus, jqXHR)
            {
                window.location = "https://secure.gop.com/donate?utm_source=organic&amp;utm_medium=web&amp;utm_campaign=20171206__homepage-email-capture_gop_rnc&amp;utm_content=gop_home";
            }
        });

      }
    });

    function getMobileOperatingSystem() {
      var userAgent = navigator.userAgent || navigator.vendor || window.opera;

        // Windows Phone must come first because its UA also contains "Android"
        if (/windows phone/i.test(userAgent)) {
            return "Windows Phone";
        }

        if (/android/i.test(userAgent)) {
            return "Android";
        }

        if (/iPhone|iPod/.test(userAgent) && !window.MSStream) {
            return "iOS";
        }

        if (/iPad/.test(userAgent) && !window.MSStream) {
            return "iPad";
        }


        return "unknown";
    }

  });
</script>


