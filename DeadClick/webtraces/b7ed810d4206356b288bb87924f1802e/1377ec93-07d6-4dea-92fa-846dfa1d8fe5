$(document).ready(function () {
    var cntproducts = window.location.href.indexOf("products");
    var cntbrands = window.location.href.indexOf("brands");
    var cntworkplace = window.location.href.indexOf("workplacesolutions");
    var cntsupport = window.location.href.indexOf("support");
    if (cntbrands > 0)
    {
        var itemName = $('ul.navbar-nav li.nav0 a #title').text().trim();
        if (itemName.toUpperCase() == "BRANDS") {
            $('ul.navbar-nav li.nav0 a').addClass("blue heading_16 current_menu");
        }
    };
    if (cntproducts > 0) {
        var itemName = $('ul.navbar-nav li.nav1 a #title').text().trim();
        if (itemName.toUpperCase() == "PRODUCTS") {
            $('ul.navbar-nav li.nav1 a').addClass("blue heading_16 current_menu");
        }
    };
    if (cntworkplace > 0) {
        var itemName = $('ul.navbar-nav li.nav2 a #title').text().trim();
        if (itemName.toUpperCase() == "WORKPLACE SOLUTIONS") {
            $('ul.navbar-nav li.nav2 a').addClass("blue heading_16 current_menu");
        }
    };
    if (cntsupport > 0) {
        var itemName = $('ul.navbar-nav li.nav3 a #title').text().trim();
        if (itemName.toUpperCase() == "SUPPORT") {
            $('ul.navbar-nav li.nav3 a').addClass("blue heading_16 current_menu");
        }
    };
    
});