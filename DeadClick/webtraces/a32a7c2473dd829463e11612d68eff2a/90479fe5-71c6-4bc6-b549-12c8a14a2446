// Inject YouTube API script
var tag = document.createElement('script');
tag.src = "//www.youtube.com/player_api";
var firstScriptTag = document.getElementsByTagName('script')[0];
firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

var youtube_player;

function onYouTubePlayerAPIReady() {
  // create the global player from the specific iframe (#video)
  youtube_player = new YT.Player('embedvid-youtube', {
    events: {
      // call this function when player is ready to use
      'onReady': onPlayerReady
    }
  });
}

// YouTube
function onPlayerReady(event) {
  // alert('onPlayerReady');
  // bind events
  var playButton = document.getElementById("embedvid-play");
  playButton.addEventListener("click", function() {
    $( "#embedvid-youtube" ).animate({opacity: 1}, 750);
    youtube_player.playVideo();
    $("#embedvid-play").css({"display":"none"});
    $("#embedvid-stop").css({"display":"block"});
  });

  var pauseButton = document.getElementById("embedvid-stop");
  pauseButton.addEventListener("click", function() {
    $( "#embedvid-youtube" ).animate({opacity: 0}, 250);
    youtube_player.pauseVideo();
    youtube_player.seekTo(0);
    $("#embedvid-play").css({"display":"block"});
    $("#embedvid-stop").css({"display":"none"});
  });

}

