$(function() {

  $('input, textarea').placeholder();

	$(".menuButton").on('click', function() {
		$(".mobileMenu, .menuButtonClose, .menuButton").toggle();
		$("html, body").animate({ scrollTop: 0 }, 0);
	});

	$(".menuButtonClose").on('click', function() {
		$(".mobileMenu, .menuButtonClose, .menuButton").toggle();
	});

	$('input:radio').checkedPolyfill();
	
});