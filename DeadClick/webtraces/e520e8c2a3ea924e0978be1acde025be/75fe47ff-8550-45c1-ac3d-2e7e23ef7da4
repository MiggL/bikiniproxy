function apri(w,h,percorso,titolo) {
		var winl = (screen.width - w) / 2;
		var wint = (screen.height - h) / 2;
	
		window.open(percorso, titolo, 'toolbar=0,location=0,status=0,menubar=0,scrollbars=0,resizable=no,width='+w+',height='+h+',top='+wint+',left='+winl)
	}