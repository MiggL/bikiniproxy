    $(document).ready(function() {
        $(".news-entry-content").children().removeAttr("style");
        $(".news-entry-content").find("a").attr("target", "_blank");
        var $social_header = $("#social-hd");
        var $sidebar = $(".news-entry-sidebar.hide-mobile");
        var content_bottom = $(".news-entry-content").offset().top + $(".news-entry-content").height();
        var sidebar_default_position = $sidebar.offset().top;
        $(window).scroll(function() {
            var social_header_position = $social_header.offset().top + $social_header.height();
            if (social_header_position >= sidebar_default_position && content_bottom > social_header_position + $sidebar.height()) {
                $sidebar.css("margin-top", (social_header_position - sidebar_default_position).toString() + "px" );
            }else if(social_header_position < sidebar_default_position){
                $sidebar.css("margin-top", '0px' );
            }
        });

        $("input[type='radio']").click(function() {
            $("input[name='" + $(this).attr("name") + "']").parent().removeClass("selected");
            $(this).parent().addClass("selected");
        });

        $("input[type='checkbox']").click(function() {
            $(this).parent().toggleClass("selected");
        });

        $("input[type='checkbox'], input[type='radio']").each(function() {
            if ($(this).prop("checked")) {
                $(this).parent().addClass("selected");
            }
        });
        
    });

    function validateEmail(email) {
        var re = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
        return re.test(email);
    }
    function validateZipCode(zip) {
        var re = /^\d{5}(?:[-\s]\d{4})?$/;
        return re.test(zip);
    }
