	$("#chatDisclaimerCHS").css({
		"position": "fixed",
		"top": windowHeight/2-popupHeightCHS/2,
		"left": windowWidth/2-popupWidthCHS/2
	});
	$("#chatDisclaimerJP").css({
		"position": "fixed",
		"top": windowHeight/2-popupHeightJP/2,
		"left": windowWidth/2-popupWidthJP/2
	});
	$("#chatDisclaimerIN").css({
		"position": "fixed",
		"top": windowHeight/2-popupHeightIN/2,
		"left": windowWidth/2-popupWidthIN/2
	});




	$("#chatDiscWin").css({"position": "fixed"});
	//only need force for IE6
	$("#chatDiscWinV").css({"position": "fixed"});
