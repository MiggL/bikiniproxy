<script type="text/javascript">
$(function() {
	$("#s")
		.val("Enter Search Terms")
		.css("color", "#000")
		.focus(function(){
			$(this).css("color", "black");
			if ($(this).val() == "Enter Search Terms") {
				$(this).val("");
			}
		})
		.blur(function(){
			$(this).css("color", "#000");
			if ($(this).val() == "") {
				$(this).val("Enter Search Terms");
			}
		})
});
</script>

