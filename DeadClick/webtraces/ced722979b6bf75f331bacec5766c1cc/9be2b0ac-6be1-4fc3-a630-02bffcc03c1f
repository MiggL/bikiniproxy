<script>
    $(function () {
        var mapOptions = { lat: 51.892776, lng: 5.193861, zoom: 16, zoomControl: !1, zoomControlOpt: { style: "BIG", position: "TOP_LEFT" }, panControl: !1, streetViewControl: !1, mapTypeControl: !1, overviewMapControl: !1 };
        var map = new google.maps.Map(document.getElementById("map1"), mapOptions);
        var infoWindow = new google.maps.InfoWindow({ content: "..." });
        var markers = new Array();

        $.ajax({
            type: 'POST',
            url: '/cms/CompanyClient/GetMarkersAsync?postcode=beesd&straal=10',
            datatype: "json",
            success: function (data) {
                var bounds = new google.maps.LatLngBounds();
                $('#dealerstableId').empty();//clear table before initializing.

                for (var i = 0; i < data.length; i++) {
                    var point = new google.maps.LatLng(data[i].Latitude, data[i].Longitude);
                    bounds.extend(point);
                    $('#dealerstable > tbody:last').append('<tr id="' + i + '" value="' + i + '" class=\'' + (i % 2 ? 'even' : 'odd') + '\'><td>' + data[i].Name + '</td><td>' + data[i].Street + '</td><td>' + data[i].Postcode + '</td><td>' + data[i].City + '</td><td>' + data[i].Phone + '</td></tr>');
                    var icon = new google.maps.MarkerImage(data[i].Icon);
                    var markerr = new google.maps.Marker({position: point,map: map,html: data[i].InfoWindow,icon: '/images/chair-toekomst.png'});
                    markers.push(markerr);
                    google.maps.event.addListener(markerr, "click", function () {
                        infoWindow.setContent(this.html)
                        infoWindow.open(map, this)
                    });
                }

                if (data.length > 0) {
                    map.fitBounds(bounds);

                    var zoomOverride = map.getZoom()
                    if (zoomOverride > 15) {
                        zoomOverride = 15
                    }
                    map.setZoom(zoomOverride);
                } else {
                    map.setCenter(new google.maps.LatLng(51.892776, 5.193861), 5)
                }

                $("#dealerstable tr").click(function () {
                    var markerr2 = markers[$(this).attr('value')]
                    google.maps.event.trigger(markerr2, 'click')
                })
                $("#dealerstable").DataTable({ bPaginate: !0, iTotalRecords: data.length, sPaginationType: "full_numbers", iDisplayLength: 10, dom: '<"top">rt<"bottom"p><"clear">' });
            }
        })

    });

    var map, map2;
    function initialize() { var e = new google.maps.LatLng(51.892822, 5.19385), a = { zoom: 12, center: e, disableDefaultUI: !0 }, o = new google.maps.Map(document.getElementById("map-canvas"), a), n = new google.maps.Marker({ position: e, title: "Hello World!" }); n.setMap(o) }

    google.maps.event.addDomListener(window, 'load', initialize);

    function getData(url) {
        var options = { lat: 51.892776, lng: 5.193861, zoom: 16, zoomControl: !1, zoomControlOpt: { style: "BIG", position: "TOP_CENTER" }, panControl: !1, streetViewControl: !1, mapTypeControl: !1, overviewMapControl: !1 };
        var map2 = new google.maps.Map(document.getElementById("map_canvas"), options);
        var infoWindow = new google.maps.InfoWindow({ content: "..." });

        var markers = new Array();

        $.ajax({
            type: 'POST',
            url: url,
            datatype: "json",
            success: function (data) {
                var bounds = new google.maps.LatLngBounds();
                $('#tableBodyId').empty();//clear table before initializing.

                for (var i = 0; i < data.length; i++) {
                    var point = new google.maps.LatLng(data[i].Latitude, data[i].Longitude);
                    bounds.extend(point);
                    $('#ledenTable > tbody:last').append('<tr id="' + i + '" value="' + i + '" class=\'' + (i % 2 ? 'even' : 'odd') + '\'><td>' + data[i].Name + '</td><td>' + data[i].Street + '</td><td>' + data[i].Postcode + '</td><td>' + data[i].City + '</td><td>' + data[i].Phone + '</td></tr>');

                    var markerr = new google.maps.Marker({
                        position: point,
                        map: map2,
                        html: data[i].InfoWindow,
                        icon: data[i].Icon
                    });

                    markers.push(markerr);
                    google.maps.event.addListener(markerr, "click", function () {
                        infoWindow.setContent(this.html);
                        infoWindow.open(map2, this);
                    });
                }

                if (data.length > 0) {
                    map2.fitBounds(bounds);

                    var zoomOverride = map2.getZoom()
                    if (zoomOverride > 15) {
                        zoomOverride = 15
                    }
                    map2.setZoom(zoomOverride);
                } else {
                    map2.setZoom(16);
                    map2.setCenter(bounds)
                }

                $("#ledenTable tr").click(function () {
                    var markerr2 = markers[$(this).attr('value')]
                    google.maps.event.trigger(markerr2, 'click')
                })
            }
        })
        google.maps.event.addListenerOnce(map2, 'idle', function () {
            google.maps.event.trigger(map2, 'resize');
        });
    }

    //google.maps.event.addDomListener(window, 'load', getData);

    $("li.m_nav").click(function () { $("#cssmenu").slideToggle("fast", function () { }); });

    if ($("#companytable").length) { getCompanies(); }

    function getCompanies() {
        $.ajax({
            type: 'POST',
            headers: {
                'Accept-Language': 'en-US'
            },
            url: '/cms/CompanyClient/GetCompanies',
            datatype: "json",
            success: function (data) {
                $('#companytablebody').empty();//clear table before initializing.'
                for (var i = 0; i < data.length; i++) {
                    $('#companytable > tbody:last').append('<tr id="' + i + '" value="' + data[i].Id + '" class=\'' + (i % 2 ? 'even' : 'odd') + '\'><td>' + data[i].Name + '</td><td>' + data[i].Street + '</td><td>' + data[i].Postcode + '</td><td>' + data[i].City + '</td><td>' + data[i].Phone + '</td><td class="text-center btnCell btnChangeCompany" id=' + data[i].Id + '><i class="fa fa-pencil" ></i></td><td class="text-center btnCell btnGoProducts" id=' + data[i].Id + '><i class="fa fa-shopping-cart"></i></td></tr>');
                }
                $('#companytable').DataTable({
                    "bPaginate": true,
                    "iTotalRecords": data.length,
                    "sPaginationType": "full_numbers",
                    "iDisplayLength": 10,
                    "dom": '<"top">rft<"bottom"p><"clear">',
                    "language": {
                        "sProcessing": "Bezig...",
                        "sLengthMenu": "_MENU_ resultaten weergeven",
                        "sZeroRecords": "Geen resultaten gevonden",
                        "sInfo": "_START_ tot _END_ van _TOTAL_ resultaten",
                        "sInfoEmpty": "Geen resultaten om weer te geven",
                        "sInfoFiltered": " (gefilterd uit _MAX_ resultaten)",
                        "sInfoPostFix": "",
                        "sSearch": "Zoeken:",
                        "sEmptyTable": "Geen resultaten aanwezig in de tabel",
                        "sInfoThousands": ".",
                        "sLoadingRecords": "Een moment geduld aub - bezig met laden...",
                        "oPaginate": {
                            "sFirst": "Eerste",
                            "sLast": "Laatste",
                            "sNext": "Volgende",
                            "sPrevious": "Vorige"
                        }
                    }
                });
                $('#companytable tbody tr td:last-child').unbind('click');
            }
        });
    }
    $("#companytable").on('click', ".btnGoProducts", function () {
        var url = '/cms/CompanyClient/SelectCompany?id=' + $(this).attr('id')
        $.ajax({
            type: 'POST',
            headers: {
                'Accept-Language': 'en-US'
            },
            url: url,
            datatype: "json",
            success: function (data) {
                if (data.error) return false;
                location.href = "/producten/all";

            }
        })
    });
    $("#companytable").on('click', ".btnChangeCompany", function () {
        var url = '/cms/CompanyClient/GetCompanyInfo?id=' + $(this).attr('id')
        $.ajax({
            type: 'POST',
            headers: {
                'Accept-Language': 'en-US'
            },
            url: url,
            datatype: "json",
            success: function (data) {
                if (data.error) return false;
                location.href = "/dealer-info/";
            }
        })
    });
    </script>


