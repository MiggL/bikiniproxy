function show_path(element_id){
	path = document.getElementById(element_id);
	path.style.display = "inline";
}
function hide_path(element_id){
	path = document.getElementById(element_id);
	path.style.display = "none";
}


function select_all(obj){
	var text_val=eval(obj);
	text_val.focus();
	text_val.select();
} 

function findPos(obj_name) {
	obj = document.getElementById(obj_name)
	myOffsetWidth = obj.offsetWidth/2;
	myOffsetHeight = obj.offsetHeight/2;
	var curleft = curtop = 0;
	if (obj.offsetParent) {
		do {
			curleft += obj.offsetLeft;
			curtop += obj.offsetTop;
		} while (obj = obj.offsetParent);				
		curleft += myOffsetWidth;
		curtop += myOffsetHeight;
		
		return [curleft,curtop];
	}
}

function drawAssociateLine(word_id, associate_id){
	word_pos = findPos(word_id);
	assoc_pos = findPos(associate_id);
	var jg_doc = new jsGraphics('canvas'); 

	jg_doc.setColor("#AAAAAA"); 
	jg_doc.setStroke(2);
  jg_doc.drawLine(word_pos[0], word_pos[1], assoc_pos[0], assoc_pos[1]); 
	jg_doc.paint(); 
	
}

