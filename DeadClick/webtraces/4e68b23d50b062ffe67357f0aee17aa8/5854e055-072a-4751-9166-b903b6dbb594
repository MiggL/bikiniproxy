    <!-- The #nonFlashContent div is where the "Flash Not Enabled" content goes.	-->

	
		<!-- Sniff for the Flash Plugin.  -->

		<script type="text/javascript"> 
			/*
				You can just look for "installed" to see if they have a Flash player installed.
				If you need more granularity, you can look at
				FlashDetect.major and FlashDetect.minor to check major and
				minor revisions of the Flash Player.  (But the Flash Player
				should gracefully handle this case.  "Should.")
			*/			
			if ( !FlashDetect.installed ) {
				document.getElementById('flashContent').style.display = 'none';
				document.getElementById('nonFlashContent').style.display = 'block';
			}
