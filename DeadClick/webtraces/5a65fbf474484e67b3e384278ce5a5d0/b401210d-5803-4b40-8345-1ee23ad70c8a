	//only need force for IE6
	$("#chatDiscWinZ").css({"position": "fixed"});
	//only need force for IE6
	$("#chatDiscWinSS").css({"position": "fixed"});
	//only need force for IE6
	$("#chatDiscWinES").css({"position": "fixed"});
	//only need force for IE6
