<script>
	window.onload = function(){
    document.getElementById('close').onclick = function(){
        this.parentNode.parentNode.parentNode
        .removeChild(this.parentNode.parentNode);
        return false;
    };
    document.getElementById("menuIcon").onclick = function() {
		if (document.getElementById("secondary-one").style.display == 'block'){
    document.getElementById("secondary-one").style.display = 'none';
    document.getElementById("menuIcon").title= "Show menu";
  } else {
  	document.getElementById("secondary-one").style.display = 'block';
    document.getElementById("menuIcon").title = "Hide menu";
  }
      };

