        jQuery(document).ready(function(jQuery) {
                jQuery(window).scroll(function(){
                        var scrolled = (jQuery(".field-name-field-table-with-header-view").offset().top)-(jQuery(window).scrollTop());
                        var scrollBottom = (jQuery("#bottom-section").offset().top)-(jQuery(window).scrollTop());
			
			if((scrolled <= 0) && (scrollBottom >=60)){
                                jQuery('.field-name-field-table-with-header-view table.sticky-header').addClass('sticky');
                        }
			else {
                                jQuery('.field-name-field-table-with-header-view table.sticky-header').removeClass('sticky');
			}
                });
        });
