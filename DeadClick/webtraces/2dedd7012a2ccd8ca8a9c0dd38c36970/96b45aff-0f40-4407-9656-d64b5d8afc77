var $ = jQuery.noConflict();

$(document).ready(function() {
		$(" #dropdownhold").hover(function(){
		$(this).find( "#dropdown").stop().animate({ marginTop: "-20px", marginBottom: "-380px"},1000, "easeOutQuart");
		},function(){
		$(this).find( "#dropdown").stop().animate({ marginTop: "-380px"}, 1000, "easeOutQuart");
		});

});	

if ( $.browser.version == 8.0 ) {

$(document).ready(function() {
		$(" #dropdownhold").hover(function(){
		$(this).find( "#dropdown").stop().animate({ marginTop: "-20px", marginBottom: "-370px"},1000, "easeOutQuart");
		},function(){
		$(this).find( "#dropdown").stop().animate({ marginTop: "-370px"}, 1000, "easeOutQuart");
		});

});	

}

var isiPhone = navigator.userAgent.indexOf("iPhone") != -1
if (isiPhone) {
    document.write("<style>#bottom{margin-top:15px;}</style>")
}

var isiPad = navigator.userAgent.indexOf("iPad") != -1
if (isiPad) {
    document.write("<style>#bottom{margin-top:15px;}</style>")
} 

var isiPod = navigator.userAgent.indexOf("iPad") != -1
if (isiPod) {
    document.write("<style>#bottom{margin-top:15px;}</style>")
}



