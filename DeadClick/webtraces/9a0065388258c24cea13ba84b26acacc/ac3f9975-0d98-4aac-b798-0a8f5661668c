define(["jquery"],function(f){var c=0,d=0,b=WCS_CONFIG.get("PDP::productDescriptionHeightControl");function g(){return'<span data-alt-text="'+STORETEXT.LESS+'" class="more-less-btn toggle-teaser-js">...'+STORETEXT.MORE+"</span>"}function h(){return'<span data-alt-text="'+STORETEXT.LESS+'" class="tag-more-less-btn toggle-teaser-js">...'+STORETEXT.MORE+"</span>"}function e(){f(".teaser-container-js").off("click",".toggle-teaser-js").on("click",".toggle-teaser-js",function(j){var k=f(j.target).parents(".teaser-container-js"),i=0;if(k.hasClass("tag-container")){k.find(".more-tags-js").toggleClass("hidden");i=k.innerHeight()>c?k.innerHeight():k.data("height")}if(k.hasClass("desc-container")){i=k.innerHeight()>d?d:k.data("height")}k.find(".toggle-teaser-js").toggleClass("opened");k.animate({height:i},500)})}function a(){f(".teaser-container-js").each(function(){$this=f(this);$this.css("height","auto");var i=$this.innerHeight();$this.data("height",i);if($this.hasClass("tag-container")){$this.append(h())}if($this.hasClass("desc-container")){if(!b){$this.css("height",i+"px")}else{$this.css("height",d+"px");if(i>d){$this.append(g())}}}});e()}f(function(){c=f(".tag-container").innerHeight();d=f(".desc-container").innerHeight();a()});return{toggleEventListener:a}});