  var firstDot = window.location.hostname.indexOf('.');
  var domain = window.location.hostname.substring(firstDot == -1 ? 0 : firstDot + 1);

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-2520177-1']);

  switch (domain) {
    case "acca-business.org":
      _gaq.push(['_setDomainName', 'acca-business.org']);
      _gaq.push(['_addIgnoredRef', 'acca-business.org']);
      break;
    default:
      _gaq.push(['_setDomainName', 'accaglobal.com']);
      _gaq.push(['_addIgnoredRef', 'accaglobal.com']);
      break;
  }

  _gaq.push(['_setAllowLinker', true]);
  _gaq.push(['_setSiteSpeedSampleRage', 100]);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

