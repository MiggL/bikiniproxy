</script>
<script type='text/javascript' src='/wp-content/plugins/wp-facebook-pixel/assets/../inc/scripts/nsautilities.min.js'></script>
<script type='text/javascript' src='/wp-content/plugins/wp-facebook-pixel/assets/../assets/NSAFacebookPixel.min.js'></script>
<script type='text/javascript' src='http://www.mercuryracing.com/wp-includes/js/wp-embed.min.js?ver=4.7.9'></script>
		<script type="text/javascript">
		jQuery(document).ready(function($) {
			var pgHt = $(window).height();
			var pgWt = $(window).width();
			var scrTop = $('body').scrollTop();
			
			function heightAdjust() {
				var pgHt = $(window).height();

				if($(window).height() > 567 && $(window).width() > 768 && ($(window).width() > $(window).height()) ) {
					$('#page-home, .page-products, .page-products-props, .home-section:not(#news-events), .automotive-section:not(#specs), #feature-slider, .page-section, #page-refresh').height(pgHt); $('.blog-list').height($('.event-list').height()-38);
				} else {
					$('#page-home, #feature-slider').height(pgHt);
					$('#nav-products > ul > li:first-child').removeClass('current');
				}
			}

			function scrollToThis(el, dur, diff) {
				var diff = typeof diff !== 'undefined' ? diff : 0;
				var newVal = $(el).offset().top+diff;
				$('html, body').animate({scrollTop: newVal}, dur);
			}

			function hideHeader() {
				$('#masthead').addClass('animating').clearQueue().animate({top: '-90px'}, 600, function() { $(this).removeClass('animating').addClass('hide-me'); /*console.log('Dang! It got away.');*/ });
			}
			function showHeader(param) {
				$('#masthead').addClass('animating').clearQueue().animate({top: 0}, 600, function() { $(this).removeClass('animating').removeClass('hide-me'); /*console.log('A wild Header appeared!');*/ });
				
				if(param == 'full') {
					if($('.page-products nav').css('position') == 'fixed') {
						pushSubheader('down');
					}
				}
			}
			function pushSubheader(dir) {
				//console.log('pushing subhead '+dir);

				if(dir == 'down') {
					var newTopVal = 88; // '+=88'
					var newTopValSq = 178;
				} else if(dir == 'up') {
					var newTopVal =  0; //'-=88';
					var newTopValSq = 88;
				}
				

				if($('#nav-products').length > 0) {
					var slctr = '#nav-products';
				} else if($('#nav-automotive').length > 0) {
					var slctr = '#nav-automotive';
				}

				if($(slctr).css('position') == 'fixed') {
				
					$(slctr).clearQueue().animate({top: newTopVal}, 600);
					
					if($('#nav-product-children').length > 0) {
						$('#nav-product-children').clearQueue().animate({top: newTopValSq}, 600);
					}
				}
			}

			function resetSubheader() {
				//console.log('subheader reset');
				$('.page-products nav').addClass('anchored').css({position: 'absolute', top: 'auto', bottom: 0});
				$('#nav-product-children').addClass('anchored').css({position: 'absolute', top: 0});

				if($('body').scrollTop() < pgHt-133) {
					showHeader('');
				}
			}

			function fixSubheader() {
				
				//if($('.page-products nav').css('position') != 'fixed') {
				if(parseInt($('.page-products nav').css('top')) != 0) {
					hideHeader();
					$('.page-products nav').removeClass('anchored').css({position: 'fixed', top: 88, bottom: 'auto'}).animate({'top': 0}, 600);
					$('#nav-product-children').removeClass('anchored').css({position: 'fixed',top:176}).animate({'top': 88}, 600);
				}
			}

			function scrollTopEval(el) {
				return $(el).offset().top;
			}

			function isIE () {
			  var myNav = navigator.userAgent.toLowerCase();
			  return (myNav.indexOf('msie') != -1) ? parseInt(myNav.split('msie')[1]) : false;
			}

			$('.primary-navigation a[href=#]').each(function() {
				$(this).removeAttr('href');
			});

			$('a[href^="tel"]').click(function(e) {
				e.preventDefault();
			});

			scrollTopCheck();

			$(window).scroll(function() {
				scrollTopCheck();
			});

			$('#scroll-to-top').click(function() {
				$('html, body').animate({scrollTop: 0}, 'slow');
			});

			function scrollTopCheck() {
				if($('body').scrollTop() > $(window).height() || $('html').scrollTop() > $(window).height()) {
					$('#scroll-to-top').fadeIn(500);
				} else {
					$('#scroll-to-top').fadeOut(500);
				}
			}

			


			

		
			var sectIndex = 0;
			heightAdjust();

			$('#home-slider').bxSlider({
				auto: true,
				pause: 10000,
				mode: 'fade',
				pagerType: 'short',
				pagerCustom: '#page-home .auto-pager',
				prevSelector: '#page-home .prev-btn',
				nextSelector: '#page-home .next-btn',
				nextText: '',
				prevText: ''
			});

			if($(window).width() < 768) {
				var theHt = $(window).height();
				$homeSlider = $('.bx-wrapper .bx-viewport');
				$homeSlider.attr('style', $homeSlider.attr('style')+';'+'height:'+theHt+'px !important');
			}
	
			$('#scroll-arrow').click(function() {
				whereTo = sectIndex+1;
				scrollToThis('.home-section:eq('+whereTo+')', 600, -88);
			});

			/*** May need to rework "verse" below ***/
			if($(window).width() > 1023) {

				$('.home-section:not(#page-home)').waypoint(function(dir) {
					if(dir == 'down') {
						sectIndex++;
					} else {
						if(sectIndex >= 1) {
							sectIndex--;
						}
					}
				}, {offset: 96});
		
				$('#news-events').waypoint(function(dir) {
					if(dir == 'down') {
						$('#scroll-arrow').fadeOut(300);
					} else {
						$('#scroll-arrow').fadeIn(300);
					}
				}, { offset: '100%' });


				/* Side drawer stuff */

				$('.home-section a.show-and-tell').click(function(e) {
					if($(this).parent().attr('id') != 'automotive') {
						e.preventDefault();
						$('#scroll-arrow, #nav-home, .home-section>a, .home-section>p').fadeOut();
						scrollToThis('#'+$(this).parent().attr('id'), 600);
						$(this).parent().find('.side-drawer').animate({left: 0}, 800, function() { $(this).addClass('opened'); $('html').css({'overflow':'hidden','height':'100%'}); $('#masthead').animate({top: '-90px'}, 600); $relIndx = 1; });
					}
				});

				$('.product-pager > a').click(function(e) {
					var relLeftPos = 0;
					var $pager = $(this).parent().find('ul');
					var visThumbs = Math.floor($pager.width() / 144);
					var numThumbs = $pager.children().length;

					if($relIndx <= 1) { $relIndx = 1; }

					if($(this).hasClass('arrow-left')) {
						$relIndx-=1;
						if($relIndx > 1) {
							relLeftPos = '+=144';
						}
					} else if($(this).hasClass('arrow-right')) {
						$relIndx+=1;
						if($relIndx < numThumbs-visThumbs+1) {
							relLeftPos = '-=144';
						}
					}
					if($relIndx > 1 && $relIndx < numThumbs-visThumbs+1) {
						$pager.animate({left: relLeftPos});
					}
				});

				$('.side-drawer .close').click(function() {
					$(this).parent().animate({left:'100%'}, 800, function() { $(this).removeClass('opened'); $('#scroll-arrow, #nav-home, .home-section>a, .home-section>p').fadeIn(300); $('html').removeAttr('style'); $('#masthead').animate({top: 0}, 600); });
				});

				$('.product-slider').each(function() {
					$(this).bxSlider({
						controls: false,
						pagerCustom: '#'+$(this).parent().parent().attr('id')+' .product-pager ul',
						slideMargin: 20,
						speed: 1200
					});
				});

			}

														
		
						
			$(window).on('orientationchange', function() {
				heightAdjust();
			});
			$(window).resize(function() {
				heightAdjust();
			}).resize();


		});
	</script>
	<script type="text/javascript">

	var _gaq = _gaq || [];
	_gaq.push(['_setAccount', 'UA-4308898-2']);
	_gaq.push(['_trackPageview']);

	(function() {
		var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	})();

	</script>

		

		
	
