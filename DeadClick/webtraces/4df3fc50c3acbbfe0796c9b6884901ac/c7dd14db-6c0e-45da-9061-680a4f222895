            <img id="txt3" class="txt txt3 hidden" src="images/txt3.png" alt="txt3">
            <img id="cta" class="cta hidden" src="images/cta.png" alt="cta">
        </div>
        <div id="border" class="border full"></div>
        <a href="javascript:void(window.open(window.clickTag));" id="clickTag" class="clickTag full"></a>
    </div>
