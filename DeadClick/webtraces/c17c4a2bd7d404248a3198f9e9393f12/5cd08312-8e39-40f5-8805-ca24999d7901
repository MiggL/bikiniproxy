$L.add("DialogManager", function(datastruct){
    var content = document.getElementById(datastruct.id);
    var contentHtml = content.innerHTML;
    var footerHtml = "<div class='dialogFooter clear_all'></div>";
    contentHtml = contentHtml+footerHtml;
    content.innerHTML = contentHtml;
    this.currentDialog = $jq('#'+ datastruct.id).dialog({
        width: datastruct.width,
        position: datastruct.position,
        resizable: false,
        draggable: true,
        closeOnEscape: false,
        autoOpen: false
    });
    this.open = function(){
        this.currentDialog.dialog('open');
    };
    this.close = function(){
        this.currentDialog.dialog('close');
    };
});
