jQuery(document).ready(function($){
    $(function() {
        $( ".accordion" ).accordion({
            autoHeight: false,
            navigation: true
        });
    });

    $('.with-caption').hover(function(){
        $(this).find('.caption').stop(true, false).fadeIn();
    }, function(){
        $(this).find('.caption').stop(true, false).fadeOut();
    });
    stLight.options({
        publisher:'ur-a46718f-19d3-1466-35b9-d9a5897fc76e',
    });
});

/**
*
* Use jQuery UI Dialog
 */

function openNewsletter() {
    var widthNewsletter = 800;
    var newsletterWindow = jQuery('#newsletter-window');
    newsletterWindow.dialog({
        modal : true,
        width: widthNewsletter,
        height : 534,
        resizable: true,
        draggable: false,
        closeOnEscape: true,
        dialogClass: 'newsletter-modal',
    });
};

