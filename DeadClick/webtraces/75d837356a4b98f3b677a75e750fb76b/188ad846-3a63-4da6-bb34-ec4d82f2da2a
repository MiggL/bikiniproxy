function setSearchVisibility(display)
{
	document.searchForm.txtSearch.style.display = display;
	document.getElementById("imgSearchButton").style.display = display;
}

function init()
{
	if (document.searchForm.txtSearch.style.display != "none")
	{
		document.searchForm.txtSearch.focus();
		window.scrollTo(0,0);		
	}
	window.setInterval("checkSearchVisibility();",5000);
}

