jQuery(document).ready(function($) {
  $(document).ready(function() {
    $('#main_nav ul li:not(.current-menu-ancestor) ul.sub-menu').hide();
    var children = false;

    $('#main_nav > ul > li > a').click(function() {
      children = $(this).parent().children('ul.sub-menu');
      if (children) {
        $('#main_nav > ul ul.sub-menu').not(children).hide();
        children.fadeIn('slow');
      }
      return false;
    });

    $('.kwicks').kwicks({
      max: 294,
      spacing: 0
    });

    var profiles =
    {
    	player: {
    		height: 200,
    		width:  220
      }
    };
    $('.popup').popupwindow(profiles);
  });
});

