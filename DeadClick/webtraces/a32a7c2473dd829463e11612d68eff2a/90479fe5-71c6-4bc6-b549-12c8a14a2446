<script>
    function addPageboardBullets(h) {
        $('.pageboard-bullet').remove();
        $('.pageboard-teardrop').remove();
        // Only run the below for medium and up layouts.
        if (Foundation.utils.is_medium_up()) {
            $('.pageboard.right').each(function () {
                var position = $(this).children('.pageboard-content').position();
                if (h == undefined) {
                    var height = $(this).children('.pageboard-content').height() * .5;
                } else {
                    var height = (h/2) - 50;
                }
                $(this).children('.pageboard-image').append( "<span class='pageboard-bullet fa fa-caret-right' style='top:" + height + "px;left:" + position.left + "px;'></span>" );

            });
            $('.pageboard.left').each(function () {
                var position = $(this).children('.pageboard-content').position();
                if (h == undefined) {
                    var height = $(this).children('.pageboard-content').height() * .5;
                } else {
                    var height = (h/2) - 50;
                }
                $(this).children('.pageboard-image').append( "<span class='pageboard-bullet fa fa-caret-left' style='top:" + height + "px;left:" + position.left + "px;'></span>" );

            });
        } else {
            $('.pageboard').each(function () {
                                var width = ($(this).children('.pageboard-image').width()/2) - 29;
                if (h == undefined) {
                    var height = $(this).children('.pageboard-image').height() - 64;
                } else {
                    var height = h - 64;
                }
                $(this).children('.pageboard-image').append( "<span class='pageboard-teardrop fa fa-caret-up' style='top:" + height + "px;left:" + width + "px;'></span>" );
            });
        }
    }
    $(document).on('replace', '.pageboard-image img', function (e, new_path, original_path) {
      $(e.currentTarget).on('load', function () {
        addPageboardBullets($(this).height());
      })
    });
    // Resize function
    $(window).on('resize', function(e){
      $(e.currentTarget).on('load', function () {
        addPageboardBullets($(this).height());
      })
    });
</script>
