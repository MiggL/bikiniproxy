  <script>
    (function($, undefined){
  $(function(){
    if($(window).width() <= 780 ){
     var $links = $('.nav').find('a');
    
    $links.on('click', function(e){
      var $li = $(this).parent();

      if($li.hasClass('mobactive') || $li.children('ul').length === 0){
        if($li.is('.mli')){
          $li.removeClass('mobactive');
        } else {
          window.location.href = $(this).attr('href');
        }
        return;
      }

      e.preventDefault();

      $li.addClass('mobactive')
        .siblings('li').removeClass('mobactive')
        .find('li').removeClass('mobactive');

    });
  }
  });
})(jQuery);
    </script>




