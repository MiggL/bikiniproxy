	<script type='text/javascript' src='http://www.mercuryracing.com/wp-includes/js/comment-reply.min.js?ver=4.7.9'></script>
<script type='text/javascript' src='/wp-content/themes/mercury-rising/js/functions.js?ver=20140319'></script>
<script type='text/javascript'>
/* <![CDATA[ */
var elementSelector = {"pro":""};
