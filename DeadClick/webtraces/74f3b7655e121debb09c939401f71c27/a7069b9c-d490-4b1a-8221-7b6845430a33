// JavaScript Document
$(document).ready(function() {

	
	
	// Position Overlay panels
	function centerPanel() {
		fullHeight = $(window).height();
		panelHeight = $(".overpanel .quicklook").height();
		$(".overpanel .quicklook").css("margin-top",(fullHeight-panelHeight)/2);
	} 
	
	// Compare Show-Hide
	$('.overpanel').hide();
	$('.quicklook.compare').hide();
	$('.quicklook div.close a').click(function(){
		$('.overpanel').fadeOut('fast');
		return false;
	});
	$("#main a.compare").click( function(){
			$('.quicklook').hide();
			$('.overpanel').show();
			$('.quicklook.compare').fadeIn();;
			centerPanel();
		return false;
	});


});
