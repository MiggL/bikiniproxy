$(function(){addNoClicks(['.select2-container','.popup-form .form-inner']);$(document.body).bind('country_to_state_changed',function(){addNoClicks(['.select2-container']);});$(document).ajaxComplete(function(){addNoClicks(['.select2-container','.popup-form .form-inner']);});$(window).off('storage onstorage');$(document.body).bind('added_to_cart',function(event,fragments,cart_hash){$(document.body).trigger('wc_fragment_refresh');});});function addNoClicks(items){if(items){for(el in items){var selector=items[el];if($(selector).length>0){$(selector).addClass('needsclick');$(selector+' *').each(function(i,itm){$(itm).addClass('needsclick');});}}}}