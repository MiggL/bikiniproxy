// infos
function rssInfos() {

	var rss_infos = "";
	var lines = 0;
	var x = 0;
	var y = 0;

	$.get("//emplois.isarta.com/infofeeds/cache2/http___isarta_com_infos__feed_rss2_cat_137.xml", function (data) {
	
			rss_infos = rss_infos + "<div class='row' id='carousel-bounding-box'>";	
			rss_infos = rss_infos + "<div class='col-xs-2 carousel-controls-mini arrowPrev2'>";	
			rss_infos = rss_infos + "<a href='#carousel_infos' data-slide='prev'><img src='/design/img/ic_arrow-left_30.png' width='20px'></a>";	
			rss_infos = rss_infos + "</div>";	

			rss_infos = rss_infos + "<div class='col-xs-8 carousel-image'>";	
			rss_infos = rss_infos + "<div id='carousel_infos' class='carousel slide'>";	
			rss_infos = rss_infos + "<div class='carousel-inner'>";						

	$(data).find("item").each(function () {
	var el = $(this);

			rss_infos = rss_infos + "<div class='";
			if (x == 0) { rss_infos = rss_infos + "active "; }
			rss_infos = rss_infos + "item' data-slide-number='" + x + "'>";
			rss_infos = rss_infos + "<h5><a target='_blank' href='" +  el.find("link").text() + "'>" + el.find("title").text() + "</a></h5>";
			rss_infos = rss_infos + "</div>";

			x++;
	
		});
			rss_infos = rss_infos + "</div></div></div>";
		
			rss_infos = rss_infos + "<div class='col-xs-2 carousel-controls-mini'><a href='#carousel_infos' data-slide='next'><img src='/design/img/ic_arrow-right_30.png' width='20px'></a></div>";
			rss_infos = rss_infos + "<div class='col-xs-12' id='carousel_infos-text'></div>";
			rss_infos = rss_infos + "<div style='display:none;' id='slide-content_infos'>";

	$(data).find("item").each(function () {
	var el2 = $(this);
	
			rss_infos = rss_infos + "<div id='slide-content_infos-" + y + "'>";
			rss_infos = rss_infos + "</div>";
			
			y++;
		
	});	
	
	rss_infos = rss_infos + "</div></div>";

				
			$('#rss_infos').html(rss_infos);
			//cb();
	   
		});
	
	}

