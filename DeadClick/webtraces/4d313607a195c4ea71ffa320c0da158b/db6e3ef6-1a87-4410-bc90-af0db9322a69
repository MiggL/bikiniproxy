<script type="text/javascript">

$(document).ready(function(){
   $("#global-search-link").click(function(){
     $("#global-search-link").attr("href", "http://ec.europa.eu/geninfo/query/action?query_source=RESEARCHPP&swlang=en&QueryText=" + $("#global-search-text").val());
   });
    $("#unreadnotifs").html($.cookie("unreadnotifs"));
	$("#unreadfnotifs").html($.cookie("unreadfnotifs"));
});


function handle(e){
	if(e.keyCode == 13){
		var win = window.open("http://ec.europa.eu/geninfo/query/action?query_source=RESEARCHPP&swlang=en&QueryText=" + $("#global-search-text").val(), '_blank');
		win.focus();
	}
	return false;
}
</script>

