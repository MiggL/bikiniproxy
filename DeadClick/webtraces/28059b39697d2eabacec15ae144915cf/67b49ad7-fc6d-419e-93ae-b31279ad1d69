$(document).ready(function(){$('.forum_post_content img').each(function(){$(this).hide();});$('.forum_post_content_preview img').each(function(){$(this).hide();});var contentWidths=[];$(".data_content").each(function(){contentWidths.push($(this).width());});var minContentWidth=Math.min.apply(null,contentWidths);var previewContentWidths=[];$(".data_content_preview").each(function(){previewContentWidths.push($(this).width());});var minPreviewContentWidth=Math.min.apply(null,previewContentWidths);$('.forum_post_content img').each(function(){$(this).css('max-width',(Math.min(minContentWidth-6,$(window).width()-84)).toString()+'px');$(this).show();});$('.forum_post_content_preview img').each(function(){$(this).css('max-width',(Math.min(minPreviewContentWidth-30,$(window).width()-84)).toString()+'px');$(this).show();});$(window).on('resize',function(){$('.forum_post_content img').each(function(){$(this).css('max-width',(Math.min($(this).closest(".data_content").width()-6,$(window).width()-84)).toString()+'px');});$('.forum_post_content_preview img').each(function(){$(this).css('max-width',(Math.min($(this).closest(".data_content_preview").width()-30,$(window).width()-84)).toString()+'px');});});});