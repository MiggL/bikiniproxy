	//only need force for IE6
	$("#chatDiscWinIN").css({"position": "fixed"});
	//only need force for IE6

	$("#backgroundChatDisc").css({
		"height": windowHeight
	});
	$("#backgroundChatDiscV").css({
		"height": windowHeight
