var currentNid = Drupal.settings.custommodule.currentNid;
jQuery( "#node-"+currentNid+" div.story_related_"+currentNid ).insertAfter( ".field-name-body p:eq(3)" );
var te=jQuery("#node-"+currentNid+ " #related-story-wraper").html();
