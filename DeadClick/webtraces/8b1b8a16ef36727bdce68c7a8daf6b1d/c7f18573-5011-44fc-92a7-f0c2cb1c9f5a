GrahamTechnology.ui.TextLabel=function(a){GrahamTechnology.ui.AbstractComponent.call(this,a);this.disableAccessKey=function(){var b=this.element();var c=GrahamTechnology.DOM.getFirstElementByTagAndClass(b,"label",null);if(!GrahamTechnology.Base.isUndefinedOrNull(c)){var d=YAHOO.util.Dom.getAttribute(c,"accessKey");if(d!=null){this.mnemonic=d;c.removeAttribute("accessKey")}}};this.setBG_Color=function(b){if(!this.transparent){this.element().style.background=b;this.BG_color=b}};this.enableAccessKey=function(){var b=this.element();var c=GrahamTechnology.DOM.getFirstElementByTagAndClass(b,"label",null);if(!GrahamTechnology.Base.isUndefinedOrNull(c)&&(this.mnemonic!=null)){YAHOO.util.Dom.setAttribute(c,"accessKey",this.mnemonic)}};this.changeLabelText=function(b){var f=this.element();if(f!=null){f.innerHTML=b;var g=document;var e=g.getElementsByTagName("BODY")[0];var i=g.createElement("DIV");var c=g.createElement("SPAN");i.appendChild(c);i.style.fontFamily="Arial";c.innerHTML=b;if(f.style.fontSize!=""){c.style.fontFamily=f.style.fontFamily;c.style.fontWeight=f.style.fontWeight;c.style.fontSize=f.style.fontSize;e.appendChild(i);if(this.naturalSize){f.style.width=c.offsetWidth+"px";this.naturalWidth=c.offsetWidth}}else{c.style.fontFamily="Times New Roman";c.style.fontSize="12pt";e.appendChild(i);if(this.naturalSize){f.style.width=c.offsetWidth+"px";this.naturalWidth=c.offsetWidth}}e.removeChild(i);logger.log("Label changed for text label "+this.id,"info","TextLabel.changeLabelText")}}};GrahamTechnology.ui.TextLabel.prototype=new GrahamTechnology.ui.AbstractComponent;