<script type="text/javascript">

   	var topic = {
                 'ccm2Id':     '31071369',
                 'identifier': 'SC5-21-2016-2017',
                 'title':      'Cultural heritage as a driver for sustainable growth',
                 'status':     'Closed'
     };

 	$(document).ready( function(){
	       $.ajax({
	             type:"POST",
                 url:"/research/participants/api//partnerSearch/topicOrganisationsCount.json",
                 data: JSON.stringify(topic),
                 contentType:"application/json;",
                 dataType:"json",
                 success: function(responseData, textStatus, jqXHR) {
                     $("#results-counter").html(responseData);
			    }
            }).done()

            $("#viewOrganisationsBtn").click(function(){
		        window.location.href = "../../../organisations/active_req_for_partners.html?ccm2Id="+31071369;
	        });
  	});

</script>

