        var count = 1;
        var row = 0;

        $('.productList li').each(function() {
            $(this).attr('title', count);
            count++;
            row = parseInt($(this).attr('title'))/2;
            $(this).attr('id', 'row'+Math.ceil(row));
            //alert(Math.ceil(row));
            //alert($(this).height());
