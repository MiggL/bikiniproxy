	<script>
			$(document).ready(function(){
				anim();	
			});		

			departAnim = 2000;
			
			function anim(){
			
				
				setTimeout(function(){
					$("#logo").transition({top:20, duration: 700}, 'ease');	

				},200);
				
				setTimeout(function(){					
					<!-- $("#txt1").transition({opacity:1, duration: 300}, 'ease');	 -->
				},500);
				
				setTimeout(function(){					
					$("#contCTA").transition({opacity:1, duration: 300}, 'ease');	
				},700);
				
				setTimeout(function(){					
					$("#bg1").transition({left:-300, duration: 700}, 'ease');	
					$("#bg2").transition({left:0, duration: 700}, 'ease');	
					
					<!-- $("#txt1").transition({opacity:0, duration: 700}, 'ease');	 -->
					<!-- $("#txt2").transition({opacity:1, duration: 700}, 'ease');						 -->
													
					$("#cta1").transition({left:-190, duration: 700}, 'ease');
					$("#cta2").transition({left:57, duration: 700}, 'ease');
				},departAnim+500);
				
				setTimeout(function(){					
					$("#bg2").transition({left:-300, duration: 700}, 'ease');	
					$("#bg3").transition({left:0, duration: 700}, 'ease');	
					
					<!-- $("#txt2").transition({opacity:0, duration: 700}, 'ease');	 -->
					<!-- $("#txt3").transition({opacity:1, duration: 700}, 'ease');						 -->
													
					$("#cta2").transition({left:-190, duration: 700}, 'ease');
					$("#cta3").transition({left:57, duration: 700}, 'ease');
				},departAnim+departAnim+500);	
				
				setTimeout(function(){	
					
					$("#bg3").transition({left:-300, duration: 700}, 'ease');	
				},departAnim+departAnim+departAnim+1000);
				
				setTimeout(function(){	
					
					$("#bg4").transition({opacity:1, duration: 700}, 'ease');	
				},departAnim+departAnim+departAnim+1500);
					
				
			}
				
		</script>
