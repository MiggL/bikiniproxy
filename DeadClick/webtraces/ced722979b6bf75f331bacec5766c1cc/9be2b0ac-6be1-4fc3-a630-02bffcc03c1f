<script>
    $("#dealercombobox").change(function () {

        var data = { id: $("#dealercombobox option:selected").data("id") };

        $.ajax({
            url: "/cms/CompanyClient/DealerAdmin",
                type: "post",
                data: data,
                dataType: "json",
                success: function (html) {
                    location.reload();
                }
            });
        });
</script>
<script type="text/javascript">
    function optionCheck() {
        var option = document.getElementById("options").value;
        if (option != "nl") {
            window.location = "/" + option;
        } else {
            window.location = "/";
        }
    }
</script>






