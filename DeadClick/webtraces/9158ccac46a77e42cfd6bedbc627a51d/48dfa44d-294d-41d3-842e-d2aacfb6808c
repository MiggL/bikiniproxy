<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script type="text/javascript">
	/** Validation Messages **/
	jQuery.extend(jQuery.validator.messages, {
			required: "This field is required.",
			email: "Please enter a valid email address.",
			number: "Please enter a valid number.",
			digits: "Please enter only digits.",
			maxlength: jQuery.validator.format("Please enter no more than {0} characters."),
			minlength: jQuery.validator.format("Please enter at least {0} characters."),
			rangelength: jQuery.validator.format("Please enter a value between {0} and {1} characters long."),
			range: jQuery.validator.format("Please enter a value between {0} and {1}."),
			max: jQuery.validator.format("Please enter a value less than or equal to {0}."),
			min: jQuery.validator.format("Please enter a value greater than or equal to {0}.")
	});
	jQuery.validator.addMethod("isphone", function(phone_number, element) {
    phone_number = phone_number.replace(/\s+/g, "");
    return this.optional(element) || phone_number.length > 9 &&
    phone_number.match(/^\(?(\d{3})\)?[-\. ]?(\d{3})[-\. ]?(\d{4})$/);
}, "Please specify a valid phone number");
	/** Validation rules **/
	var field_rules = {
			"phone":{
				"required": true,
      	"phoneUS": true
			},
			"email": {
				"required": true,
				"email": true,
				"maxlength": 60
			},
			"zipcode": {
				"required": true,
				"maxlength": 5,
				"minlength": 5,
				"digits": true
			}
	}
	function validate_info_home(validated_wrapper, skip_init) {
			if (!skip_init) {
					$(validated_wrapper).validate({
						onkeyup: function(element) {
	            this.element(element);
						},
            onclick: function(element) {
	            this.element(element);
						},
            onfocusout: function(element) {
	            this.element(element);
						}
					});
			}

			for (var field in field_rules) {
					var $input_field = $(validated_wrapper + " input[name='" + field + "']");
					if (field_rules.hasOwnProperty(field) && $input_field.length > 0) {
							$input_field.rules("add", field_rules[field]);
					}
			}
	}

$(document).ready(function() {
		$("input[name='full_name']").blur(function() {
				var full_name = $(this).val();
				var parsed_name = NameParse.parse(full_name);
				$("#id_first_name").attr("value", parsed_name.firstName);
				$("#id_last_name").attr("value", parsed_name.lastName);
		});

		// Check if error labels should be shown or not
		$error_labels = $("label.error");
		result = {};
		for (var i = 0; i < $error_labels.length; ++i) {
				$this_label = $($error_labels[i]);
				if ($this_label.text()) {
						$this_label.show();
						$this_label.parent().find("input").addClass("error");
						result[$this_label.text()] = $this_label.attr('for').substr(3);
				}
		}
		if (result != {}) {
				errors = JSON.parse(JSON.stringify(result));
				var ddFormError = {
						eventInfo: {
								eventName: 'form_error',
								type: 'error',
						},
						error: {formErrorMessage: errors}
				};
				/**
				var digitalData = digitalData || {};
				digitalData.events = digitalData.events || [];
				digitalData.events.push(ddFormError);
				**/
				sendCustomEvent('form_error');
		}

});



	//Return the first value with the matching parameter name from a GET request
	//If it does not exist returns null
	function getRequestParam (paramName) {
		if(paramName=(new RegExp('[?&]'+encodeURIComponent(paramName)+'=([^&]*)')).exec(location.search)){
			return decodeURIComponent(paramName[1]);
		}
		return null
	};

	function getFieldValue (parameters){
		var completeValue = ''
		if (parameters.constructor === Array){
			for (var i = 0; i < parameters.length; ++i){

				var value = getRequestParam(parameters[i]);
				if (value === null){
					return null
				}
				completeValue += completeValue.length > 0 ? (' ' + value) : value;
			}
		}
		else{
		 	completeValue = getRequestParam( parameters );
		}

		return completeValue;
	}

	var any_type = "phone";

	var fieldParamMapping = {
		'id_email': 'email',
		'id_any_type': 'any_type',
		'id_utm_source': 'utm_source',
		'id_utm_medium': 'utm_medium',
		'id_utm_campaign': 'utm_campaign',
		'id_utm_content': 'utm_content',
		'id_referrer': 'referrer',
	}

	function fillForm (mapping){
		for (var fieldId in mapping) {
			var value = getFieldValue (mapping[fieldId]);
			var field = document.querySelectorAll('input#' + fieldId)[0];
			if (value != null && field != null){
				field.value = value;
			}
		}
	}

</script>

<script type="text/javascript">
	fillForm(fieldParamMapping);
</script>
