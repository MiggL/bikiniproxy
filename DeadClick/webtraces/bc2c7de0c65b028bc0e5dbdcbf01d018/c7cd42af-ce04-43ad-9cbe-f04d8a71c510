        <div class="info">

            <#
                // Get index of item with SKUID = ess.sku
                var skuIndex = -1;
                for(var i = 0; i < cartProducts.length; i++) {
                    if(cartProducts[i].skuId == ess.sku) {
                        skuIndex = i;
                    }
                }
                //console.log(skuIndex);
            #>

            <h3 class="minicart-heading">AJOUTÉ AU PANIER</h3>
			  <a href=":{cartProducts[skuIndex].productPageUrl}"><img alt=":{cartProducts[skuIndex].displayTitle}" src=":{cartProducts[skuIndex].productImageUrl}" width="50" height="50" /></a>

            <ul id="mc-just-added">
                <li class="title">:{cartProducts[skuIndex].displayTitle}</li>

		

                   <#
                   try {
				           if (cartProducts[skuIndex].pricing.itemLevelDiscountedPrice.amount !== null)  {
				               var formattedPrice = cartProducts[skuIndex].pricing.itemLevelDiscountedPrice.amount.toFixed(2);
						   }

                            if(cartProducts[skuIndex].pricing.itemLevelDiscountedPrice.amount > cartProducts[skuIndex].pricing.unitPrice.amount) {
                                var formattedPrice = cartProducts[skuIndex].pricing.unitPrice.amount.toFixed(2);
                            }
				   }
				   catch(err) {
                           var formattedPrice = cartProducts[skuIndex].pricing.unitPrice.amount.toFixed(2);
				   }

                    // Issue 94277 (note - the below lines were commented out for 94277 but un-commented to fix 94587)
                    //formattedPrice = formattedPrice * cartProducts[skuIndex].quantity;
                    formattedPrice = formattedPrice * ess.quantityJustAdded;
                    formattedPrice = formattedPrice.toFixed(2);

                    var size = '';
                    var sizeStyle = '';

                    if(cartProducts[skuIndex].sizeDescription != null) {
                        size = cartProducts[skuIndex].sizeDescription;

                        if(size.length <= 3) {
                            sizeStyle = '-abbr';
                        }
                    }

				   #>

				<# var color = cartProducts[skuIndex].colorDescription;  #>
                

				<li>
					Prix:
					
						
						
							:{formattedPrice} &euro;
						
					
				</li>
                <li class="color">Couleur: :{color}</li>

                <:if size != '':>
                <li class="size:{sizeStyle}">Taille: <span>:{size}</span></li>
                <:/if:>

                <li class="quantity">Quantité: :{cartProducts[skuIndex].quantity}</li>

                
            </ul>
		   <div class="conf-summary"></div>
        </div>
</div>



