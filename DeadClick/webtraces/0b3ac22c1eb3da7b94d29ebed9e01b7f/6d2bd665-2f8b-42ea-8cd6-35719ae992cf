function rssFormations() {

	var rss_formations = "";
	var lines = 0;
	var x = 0;
	var y = 0;

	$.get("//emplois.isarta.com/infofeeds/cache2/http___isarta_com_formations__feed_rss2.xml", function (data) {
	
			rss_formations = rss_formations + "<div class='row' id='carousel-bounding-box'>";	
			rss_formations = rss_formations + "<div class='col-xs-2 carousel-controls-mini arrowPrev'>";	
			/*rss_formations = rss_formations + "<a href='#carousel_formations' data-slide='prev'><img src='http://emplois.isarta.com/design/img/ic_arrow-left_301.png' width='20px'></a>";*/
			rss_formations = rss_formations + "<a href='#carousel_formations' data-slide='prev'><img src='/design/img/custom-arrow-left.png' width='18px'></a>";
			rss_formations = rss_formations + "</div>";	

			rss_formations = rss_formations + "<div class='col-xs-8 carousel-image'>";	
			rss_formations = rss_formations + "<div id='carousel_formations' class='carousel slide'>";	
			rss_formations = rss_formations + "<div class='carousel-inner'>";						

	$(data).find("item").each(function () {
	var el = $(this);

			rss_formations = rss_formations + "<div class='";
			if (x == 0) { rss_formations = rss_formations + "active "; }
			rss_formations = rss_formations + "item' data-slide-number='" + x + "'>";
			rss_formations = rss_formations + "<h5><a target='_blank' href='" +  el.find("link").text() + "'>" + el.find("title").text() + "</a></h5>";
			rss_formations = rss_formations + "</div>";

			x++;
	
		});
			rss_formations = rss_formations + "</div></div></div>";
		
			/*rss_formations = rss_formations + "<div class='col-xs-2 carousel-controls-mini'><a href='#carousel_formations' data-slide='next'><img src='http://emplois.isarta.com/design/img/ic_arrow-right_301.png' width='20px'></a></div>";*/
			rss_formations = rss_formations + "<div class='col-xs-2 carousel-controls-mini'><a href='#carousel_formations' data-slide='next'><img src='/design/img/custom-arrow-right.png' width='18px'></a></div>";
			rss_formations = rss_formations + "<div class='col-xs-12' id='carousel_formations-text'></div>";
			rss_formations = rss_formations + "<div style='display:none;' id='slide-content_formations'>";

	$(data).find("item").each(function () {
	var el2 = $(this);
	
			rss_formations = rss_formations + "<div id='slide-content_formations-" + y + "'>";
			rss_formations = rss_formations + "</div>";
			
			y++;
		
	});	
	
	rss_formations = rss_formations + "</div></div>";

				
	$('#rss_formations').html(rss_formations);
	//cb();                                                                               // d√©comenter au besoin                                               
	   
	});

}

// ne sert pas	
function rssFormationsHome() {

	var rss_formations = "";
	var lines = 0;
	var x = 0;

	$.get("//emplois.isarta.com/infofeeds/cache2/http___isarta_com_formations__feed_rss2.xml", function (data) {					

	$(data).find("item").each(function () {
	var el = $(this);

			rss_formations = rss_formations + "<div class='col-md-4 col-sm-24'>";
			rss_formations = rss_formations + "<div class='row'>";
			rss_formations = rss_formations + "<div class='col-sm-12'>";
			rss_formations = rss_formations + "<img src='" + el.find("image").text() + "' width='100%'></img>";
			rss_formations = rss_formations + "</div>";
			rss_formations = rss_formations + "</div>";
			
			rss_formations = rss_formations + "<div class='row'>";
			rss_formations = rss_formations + "<div class='col-sm-12'>";
			rss_formations = rss_formations + "<p class='formations-textes'>" + el.find("title").text() + "</p>";
			rss_formations = rss_formations + "</div></div></div>";

			x++;
	
		});
				
	$('#rss_formations_home').html(rss_formations);
	   
	});

}


function runFormations() {

	$('#rss_formations').carousel({
	interval: 3000
	});
	
	$('#carousel_formations-text').html($('#slide-content_formations-0').html());
	
	$('#carousel_formations').on('slid.bs.carousel', function (e) {
	var id = $('#carousel_formations .item.active').data('slide-number');
	$('#carousel_formations-text').html($('#slide-content_formations-'+id).html());
	});		
}

function runInfos(){

	$('#rss_infos').carousel({
	interval: 3000
	});
	
	$('#carousel_infos-text').html($('#slide-content_infos-0').html());
	
	$('#carousel_infos').on('slid.bs.carousel', function (e) {
	var id = $('#carousel_infos .item.active').data('slide-number');
	$('#carousel_infos-text').html($('#slide-content_infos-'+id).html());
	});		
}

window.onload = runFormations();
window.onload = rssFormations();
window.onload = rssInfos();

	