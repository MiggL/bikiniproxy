<script type="text/javascript">
$(function() {
    $( "#popup-toggler" ).click(function() {
        $( ".popup-div" ).slideToggle(500);
    });
});
$.ajax({
    url: 'http://d2lpx143050ayq.cloudfront.net/dailynation/latest.json',
    type: "get",
    dataType: "json",
   
    success: function(data) {
        drawTable(data);
    }
});

function drawTable(data) {
    for (var i = 0; i < data.length; i++) {
        drawRow(data[i]);
    }
}

function drawRow(rowData) {
    var row = $("<tr />")
    $("#jsonData").append(row); 
    row.append($('<td><div class="popup-div-thumb"><a href="'+ rowData.link +'"> ' + '<img class="imgbrd" src="'+ rowData.photo +'" border="0">' + '</a></div></td>'));
    row.append($('<td><div class="popup-div-txt"><h5><a href="'+ rowData.link +'" class="item-title">' + rowData.title + "</a></h5></div></td>"));
    
}
</script>
