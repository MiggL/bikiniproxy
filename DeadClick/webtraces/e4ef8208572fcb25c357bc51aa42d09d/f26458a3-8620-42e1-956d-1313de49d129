(function() {
  'use strict'

  //following sets background changes for top menu
  var distTop = $(".home .navbar-fixed").offset().top;

  $(document).scroll(function(){
      if($(this).scrollTop() > distTop + 100) {
        $('.home .navbar-fixed').fadeIn("slow", function() {
          $(".home .navbar-fixed nav").css({"background":"#892532"});
        });
      } else if ($(this).scrollTop() < 10) {
        $(".home .navbar-fixed nav").fadeIn("slow", function() {
          $(".home .navbar-fixed nav").css({"background": 'rgba(137, 37, 50, .9)'});
        });
      }
  });

  $('.scroll-down a').on('click', function(event){
    event.preventDefault();
    $('html,body').animate({scrollTop:$(this.hash).offset().top}, 500);
    $('.home .navbar-fixed').fadeIn("slow", function() {
      $(".home .navbar-fixed nav").css({"background":"#892532"});
    });
  });

  $('.home #hero .l7 .action-call').on('click', function(event){
    event.preventDefault();
    $('html,body').animate({scrollTop:$(this.hash).offset().top}, 500);
    $('.home .navbar-fixed').fadeIn("slow", function() {
      $(".home .navbar-fixed nav").css({"background":"#892532"});
    });
  });

  var options = [
    {selector: '.hero', offset: 10, callback: function() {
    } },
    {selector: '.home-content', offset: 400, callback: function(el) {
    } },
  ];
  Materialize.scrollFire(options);


})();
