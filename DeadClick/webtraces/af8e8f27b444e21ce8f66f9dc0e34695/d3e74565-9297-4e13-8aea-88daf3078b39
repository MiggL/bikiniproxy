jQuery(document).ready(function($){


	
	$('#utility-menu > ul,#main-menu > ul').superfish({
		delay:       100,                            // one second delay on mouseout
		animation:   {opacity:'show',height:'show'},  // fade-in and slide-down animation
		speed:       'fast',                          // faster animation speed
		autoArrows:  false                            // disable generation of arrow mark-up
	});
	
	$('.mobile-menu-toggle').click(function(){
		$('.mobile-menu-list').fadeToggle();
		$(this).toggleClass('open');
		
		return false;
	});
	

	$('.search input[type=text]').clearme();

	$('#product-categories > ul > li > a').click(function(e){
		if($(this).parent().has("ul").length){
			if ($(this).attr('class') != 'active'){
				$('#product-categories > ul > li > ul').slideUp();
				$(this).next().slideToggle();
				$('#product-categories > ul > li > a').removeClass('active');
				$(this).addClass('active');
			}
			e.preventDefault();
		}
	});
    
	/*$('#product-item .image .preview').cycle({
        fx:     'fade',
        speed:  'fast',
        timeout: 0,
        pager:  '#product-item .image .thumbs ul',
        pagerAnchorBuilder: function(idx, slide) {
            // return sel string for existing anchor
            return '#product-item .image .thumbs ul li:eq(' + (idx) + ') a';
        }
    });*/
	

});
