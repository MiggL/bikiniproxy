function hideWaitBlock() {
	hideSelects('visible');
        document.getElementById('waitBlock').style.display = 'none';
        document.getElementById('waitBlockContainer').style.display = 'none';
	///Element.hide('waitBlock');
        //Element.hide('waitBlockContainer');
        start_scroll();
}

