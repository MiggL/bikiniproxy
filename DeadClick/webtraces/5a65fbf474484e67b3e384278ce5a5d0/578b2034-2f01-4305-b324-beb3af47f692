var op2Chat2Window;

function openChata() {
	if(op2Chat2Window && !op2Chat2Window.closed && op2Chat2Window.focus) {
		op2Chat2Window.focus();
		return;
	}

   	var tenantUrl = 'aspectsales.zipwiresw.com';
   	var entryName = 'Aspect%20Chat%20Entry';
	var key = "&sesID=";
    var possible = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";

    for( var i=0; i < 5; i++ )
        key += possible.charAt(Math.floor(Math.random() * possible.length));

   	op2Chat2Window = window.open("https://aspectsales.zipwiresw.com:9443/clientweb/app/extchat/client/client-chat-page.html?openHours=" +
			(isChatAvailable ? "1":"0") + "&tenantUrl=" + tenantUrl + "&entryName=" + entryName + key, "chatWindow",
			'height=664, width=682, left=300, x=300, top=100, y=100, menubar=0, status=0, toolbar=0, titlebar=0, status=0, location=0');

	if (op2Chat2Window && op2Chat2Window.focus)	op2Chat2Window.focus();
}