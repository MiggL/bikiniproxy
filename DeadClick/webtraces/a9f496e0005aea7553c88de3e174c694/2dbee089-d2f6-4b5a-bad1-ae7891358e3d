        for(i = 1; i <= row; i++){
            var max_h_in_row = 0;

            $('.productList li[id=row'+i+']').each(function() {
                if($(this).height() > max_h_in_row)
                    max_h_in_row = $(this).height();
                 //alert($(this).attr('title'));
            });

            $('.productList li[id=row'+i+']').each(function() {
                $(this).height(max_h_in_row);
            });
        }

