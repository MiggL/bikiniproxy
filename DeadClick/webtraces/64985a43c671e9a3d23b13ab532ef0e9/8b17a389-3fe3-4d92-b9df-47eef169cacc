<script type="text/javascript">
    $(document).ready(function () {
        var prefixe = $("#prefixe").text();
        if (prefixe == '/fr/fr')
            prefixe = '';

        $("#btnAbonne").on('click', function (e) {
            e.preventDefault();
            var datas = "action=AbonnementNewsletter";
            datas += "&mail=" + $("#mail").val();
            var post = serializeForm();
            datas += post;
            $.post(prefixe + "/AjaxCall.html", datas, function (reponse) {
                if ('ko' == reponse.status) {
                    $("#result").html(reponse.message);
                } else {
                    window.location.href = reponse.message;
                }
            }, 'json');
        });

        $("#stopPopUp").on('click', function (e) {
            e.preventDefault();
            var datas = "action=AntiPopUpNewsletter";
            $.post(prefixe + "/AjaxCall.html", datas, function () {
                $.fancybox.close();
            }, 'json');
        });
    });

    function serializeForm() {
        var data = {};
        data.field = [];
        $.each($(".popUpUnivers input[type=checkbox]:checked"), function () {
            data.field.push({ "id": $(this).attr('id'), "value": $(this).val() });
        });

        var post = "&categIds=";
        $.each(data.field, function (i) {
            post += data.field[i]["value"] + "|";
        });
        $.each($(".autresOffres input[type=checkbox]:checked"), function () {
            post += "&" + $(this).attr('id') + "=" + $(this).val();
        });
        return post;
    }
</script>