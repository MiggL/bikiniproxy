/* docsum snippet, used on article page for retraction notices and on journal page */
.labs-docsum-snippet {
  /* properties to display only 2 lines of text with ellipsis */
  -webkit-box-orient: vertical;   /* NOSONAR */
  -moz-box-orient: vertical;   /* NOSONAR */
  -ms-box-orient: vertical;   /* NOSONAR */
  box-orient: vertical;   /* NOSONAR */
  -webkit-line-clamp: 2;   /* NOSONAR */
  display: block;
  display: -webkit-box;   /* NOSONAR */
  overflow: hidden;
  text-overflow: ellipsis;
}

