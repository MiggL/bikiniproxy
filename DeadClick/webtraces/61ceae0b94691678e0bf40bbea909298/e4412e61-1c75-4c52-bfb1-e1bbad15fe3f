/* turns image to Off and hides active Tab */
function turnOff(activeTab)
{

    if (getId(activeTab + 'Image'))
    {   if (smImages)
            { getId(activeTab + 'Image').src = imageServer + "/images" + imagesBrand + "/" + activeTab + "_sm_off.gif"; }
        else { getId(activeTab + 'Image').src = imageServer + "/images" + imagesBrand + "/" + activeTab + "_off.gif"; }
    }
    
    if (getId(activeTab + 'Content'))
    { getId(activeTab + 'Content').style.display = "none"; }
    
    if (getId(activeTab + 'Head'))
    { getId(activeTab + 'Head').style.display = "none"; }
    
    return false;
}

/* turns image to On and activates the current Tab */
function turnOn(activeTab)
{
    if (getId(activeTab + 'Image'))
    {
        if (smImages)
        { getId(activeTab + 'Image').src = imageServer + "/images" + imagesBrand + "/" + activeTab + "_sm_on.gif"; }
        else { getId(activeTab + 'Image').src = imageServer + "/images" + imagesBrand + "/" + activeTab + "_on.gif";}
    }
    
    if (getId(activeTab + 'Content'))
    { getId(activeTab + 'Content').style.display = "block"; }

	if (getId(activeTab + 'Head'))
	{ getId(activeTab + 'Head').style.display = "block"; }
    
    return false;
}

function getTab(currentTab) {
  try{
    // refresh ads on page with tab change
    webmd.metrics.dpv();
  }
  catch(e) {}

  turnOff(activeTab);
  activeTab = currentTab;
  turnOn(activeTab);
  return false;
}


function vit_setupPage()
{
    smImages = 0;
    activeTab = "vit_uses";
    activeTab = GetActiveTab(activeTab,false);

    turnOff('vit_uses');
    turnOff('vit_ingred');
    turnOff('vit_sideeffects');
    turnOff('vit_interactions');
    

    turnOn(activeTab);  	
    //getId('monographContent').className = "";
     getId('hideFromJS').style.display = "block";

    return false;
}

