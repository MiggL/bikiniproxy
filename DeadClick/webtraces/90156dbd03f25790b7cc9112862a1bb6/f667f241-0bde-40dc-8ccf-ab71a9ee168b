//google_map_slide





var map_m;



function initialize_m() {

	//var latlng = new google.maps.LatLng(48.91753,2.271418);

	var latlng = new google.maps.LatLng(48.858040,2.314425);

	var myOptions = {

		zoom: 11,

		center: latlng,

		disableDefaultUI: true,

		mapTypeId: google.maps.MapTypeId.ROADMAP,

		streetViewControl: true,

		navigationControl: true,

		navigationControlOptions: {

		  style: google.maps.NavigationControlStyle.SMALL

		}	

	};

	map_m = new google.maps.Map(document.getElementById("google_map_slide"), myOptions);

	

	setMarkers(map_m, musees);

}



function setMarkers(map_m, musees){

	for (var i = 0; i < musees.length; i++){

		var musee = musees[i];

		var myLatLng = new google.maps.LatLng(musee['coord2'], musee['coord1']);

		var marker = new google.maps.Marker({

			position: myLatLng,

			map: map_m,

			//shadow: shadow,

			//icon: image,

			//shape: shape,

			title: musee['titre']

			//zIndex: beach[3]

		});

		

		var contentString = '<div class="bulle_gmap">'+

								'<b>'+musee['titre']+'</b><br />'+

								musee['adr']+'<br />'+

								'<a href="http://'+musee['lien']+'" target="_blank">'+musee['lien']+'</a>'+

							'</div>';

		getinfo(map_m,marker,contentString)

	}



}



function getinfo(map_v,marker,contentString){

	var infowindow = new google.maps.InfoWindow({ 

		content: contentString,

		maxWidth: 'auto'

	});

	google.maps.event.addListener(marker, 'click', function() {

		//map_v.setMap(null);

		infowindow.open(map_v,marker);

	});

}



