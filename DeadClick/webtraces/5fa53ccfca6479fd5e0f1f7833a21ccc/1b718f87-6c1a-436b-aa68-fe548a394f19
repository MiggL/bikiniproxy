jQuery(document).ready(function(){
	jQuery('#pagesList .selpage').each(function(){
		var text = jQuery(this).text();
		if(text == '...'){
			jQuery(this).removeClass('selpage');
		}
	});
	
	
	/*if(jQuery('.gridExhTitle').length > 1){
		var exhTitle = jQuery('.gridExhTitle:first').text();
		jQuery('.replaceHeader').text(exhTitle);
	}*/
	
	function getPathArray(){
		var emuLoc = {};
		emuLoc.pathArray = window.location.pathname.split('/');
		return emuLoc;
	}
	
	jQuery('.gridExhTitle').each(function(){
		var elem = jQuery(this),
			colId = elem.attr('id'),
			colText = elem.html(),
			topHeader = jQuery('.replaceHeader');
			if(window.location.pathname.indexOf('Exhibitions@' + colId) != -1){
				topHeader.text(colText);
				return false;
			}
			/*idExists = window.location.pathname.indexOf(colId) //getPathArray().pathArray.indexOf(colId.toString());
			
		if(idExists != -1){			
			topHeader.text(colText);
		}*/
	});		
	
	
jQuery("#singlemedia").click(function(){
			  	jQuery(this).toggleClass("BigImage");
			});
			
			
		
			
			
});