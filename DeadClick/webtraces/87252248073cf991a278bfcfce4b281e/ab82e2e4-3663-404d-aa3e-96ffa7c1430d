// Max # of products that can be compared.
compareMax = 5;

// Default units (1 = inch, 2 = metric)
units = 2;

// number of products to show initially. 
showMax = 40;

// List or Grid
listView = false;

// Swap title and description?
swapTitleAndDesc = false;

// iStore ready?
iStoreShow = false;


// Text strings
strings = {};
strings.distributorLocatorUrl = '/website/com/eng/support/global_customer_service_distributor.php';
strings.iStoreLang = 'US';
strings.iStoreDomain = "https://store.industrialmotiononline.com";
strings.addToCompare = 'Add to Compare';
strings.compare = 'Compare';
strings.availableFromAuthorized = 'Available from authorized NA distributors near you and Thomson.';
strings.locateADistributor = 'Locate a Distributor';
strings.selectUpTo = 'Select up to';
strings.productPlural = 'Nuts';
strings.startOver = 'Start Over';
strings.viewDetails = 'View Details';
strings.buyNow = 'Buy Now';
strings.downloadCatalog = 'Download Catalog';
strings.viewModel = 'View or Download 3D Model';
strings.language = 'en';


// Images
strings.imageDistributor = '/ds_images/images_relaunch/pim_distributor.png';
strings.imageApplied = '/ds_images/images_relaunch/buybox_applied.jpg';
strings.imageMotion = '/ds_images/images_relaunch/buybox_motionind.jpg';
strings.imageKaman = '/ds_images/images_relaunch/buybox_kaman.jpg';
strings.imageThomson = '/ds_images/images_relaunch/buybox_thomson.jpg';


/**  STOP EDITING **/

// Get array of products
document.addEventListener("DOMContentLoaded", function(event) { 
	parts = [];
	$.getJSON('/website/com/eng/screws.json', function(myjson) {
		parts = myjson.map(function(object) {
			newObject = object;
			newObject.status = {};
			for(v = 0; v < attributes.length; v++) {
				newObject.status[attributes[v]] = true;

				if(data[v].needsRounding === true && newObject[attributes[v]]) {
				    // remove trailing zeros
				    var myVal = newObject[attributes[v]];
				    var theUnit = myVal.split(" ").pop();
				    var roundedNum = parseFloat(myVal).toString();
				    if(roundedNum.indexOf('.') > -1) {
				        if(roundedNum.length - myVal.indexOf('.') - 1 <= 3) {
				            roundedNum = parseFloat(myVal).toFixed(3);
				        } 
				        
				    } else {
				        var roundedNum = parseFloat(myVal).toFixed(3);
				    }

				    myVal = roundedNum + ' ' + theUnit;
				    newObject[attributes[v]] = myVal;
				}
				
                // Grab unique values
                if(data[v].optionItems && data[v].optionItems.indexOf(newObject[attributes[v]]) == -1) {
                    data[v].optionItems.push(newObject[attributes[v]])
                }					
				
				// convert imperial to metric
				if(data[v].selectType == "slider") {
				    var sliderValue = newObject[attributes[v]];
				    var num = attributes[v] + 'Num';
				    var metric = attributes[v] + 'Metric';
				    var imperial = attributes[v] + 'Imperial';
				    var theUnit = sliderValue.split(" ").pop();
				    
				    var newtonIndex = sliderUnits.N.indexOf(theUnit);
				    var kiloNewtonIndex = sliderUnits.kN.indexOf(theUnit);
				    var lbfIndex = sliderUnits.lbf.indexOf(theUnit);
				    var mmPERsIndex = sliderUnits.mmPERs.indexOf(theUnit);
				    var inPERsIndex = sliderUnits.inPERs.indexOf(theUnit);
				    var mmIndex = sliderUnits.mm.indexOf(theUnit);
				    var inIndex = sliderUnits.in.indexOf(theUnit);
				    
				    if(newtonIndex > -1) { // Newtons
				        newObject[num] = parseFloat(sliderValue);
				        newObject[metric] = parseFloat(sliderValue).toString() + " " + theUnit;
				        newObject[imperial] = pim.metricToImperial(parseFloat(sliderValue), 4.45).toString() + " " + sliderUnits.lbf[newtonIndex];
				    }
				    if(kiloNewtonIndex > -1) { // Kilo-Newtons
				        newObject[num] = parseFloat(sliderValue) * 1000;
				        newObject[metric] = newObject[num].toString() + " " + sliderUnits.N[kiloNewtonIndex];
				        newObject[attributes[v]] = newObject[metric];
				        newObject[imperial] = pim.metricToImperial(parseFloat(sliderValue), 4.45).toString() + " " + sliderUnits.lbf[kiloNewtonIndex];
				    }				    
				    if(lbfIndex > -1) { //convert lbf to Newtons
				        newObject[num] = parseFloat(sliderValue) * 4.45;
				        newObject[metric] = pim.imperialToMetric(parseFloat(sliderValue), 4.45).toString() + " " + sliderUnits.N[lbfIndex];
				        newObject[imperial] = parseFloat(sliderValue).toString() + " " + theUnit;
				    }
				    
				    // remove trailing zeros
				    roundedNum = parseFloat(sliderValue).toString();
				    theUnit = sliderValue.split(" ").pop();
				    sliderValue = roundedNum + ' ' + theUnit;
				    newObject[attributes[v]] = sliderValue;
				}
			}
			return newObject;
		});
		pim.autoOptions();	
		pim.getUrlOptions();
		pim.preSelect(JSON.parse('[{"name":"productType","value":"Glide Screw"}]'));
		pim.refresh(undefined, true);
	});
});
    
</script>

