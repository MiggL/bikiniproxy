jQuery( document ).ready(function() {
  // setTimeout(checkSuperHeader, 1000);
  new ResizeSensor(jQuery('#SuperHeader'), function() {
	setTimeout(checkSuperHeader, 4000);		
  });
});

function checkSuperHeader() {
	if (jQuery('#SuperHeader').css("display") != 'none') {
		if (jQuery('#SuperHeader').height() > 50) {
                	jQuery(document.body).addClass('takeover');
        	} else {
                        jQuery(document.body).removeClass('takeover');
                }
		setTimeout(checkSuperHeader, 1000); 
	}
	else {
                jQuery(document.body).removeClass('takeover');
		setTimeout(checkSuperHeader, 1000);
	}
}
