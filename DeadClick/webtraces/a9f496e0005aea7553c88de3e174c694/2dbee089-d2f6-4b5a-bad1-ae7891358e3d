$('#widgetCategories>ul>li').each(function () {
    $(this).addClass('CollapsiblePanelClosed').find('a:first').wrap('<div class="CollapsiblePanelTab" tabindex="0" />');
    if ($(this).find('ul').length>0) {
        
        $(this).addClass('collaps').addClass('CollapsiblePanel');
        if ($(this).find('ul:visible').length==0) {
            //$(this).addClass('CollapsiblePanelClosed');
        } else {
            $(this).removeClass('CollapsiblePanelClosed').addClass('CollapsiblePanelOpen');
        }
        var href = $(this).find('a:first').attr('href').replace(/javascript:catWidgetTree(\('\d+\',\s*\')(.*)(\'\));/,'$2');
        $(this).find('a:first').attr('href',href).click(function () { $(this).parent().parent().toggleClass('CollapsiblePanelClosed').toggleClass('CollapsiblePanelOpen')});
        
        $(this).find('ul').wrap('<div class="CollapsiblePanelContent" />');
        
        $(this).find('a[href$="'+c[c.length-1]+'/"]').parent().addClass('selected');
    }
});

