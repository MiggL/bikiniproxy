function countdown(element,counter,limit){var $element=$(element),$counter=$(counter),countdown={init:function(){countdown.remaining=countdown.max-$(countdown.obj).val().length,$counter.fadeIn("normal").html(countdown.remaining),countdown.remaining<0?($(countdown.obj).val($(countdown.obj).val().substring(0,countdown.max)),$element.scrollTop(10*$element.height())):countdown.remaining<50?$counter.addClass("close"):$counter.removeClass("close")},max:null,remaining:null,obj:null};$element.focus(function(){$element.attr("class");$counter.show(),countdown.max=limit||parseInt($counter.html()),countdown.obj=element,iCount=setInterval(countdown.init,200)}).blur(function(){countdown.init(),clearInterval(iCount)})}