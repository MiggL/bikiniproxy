jQuery(document).ready(function($) {
		/* jquery fancybox for glossary pop-ups */
	$('.glossary').fancybox({
					type		:'iframe',
					tpl			: { iframe   : '<iframe id="fancybox-glossary" name="fancybox-glossary" class="fancybox-iframe" frameborder="0" vspace="0" hspace="0"' + ($.browser.msie ? ' allowtransparency="true"' : '') + '></iframe>'},
					fitToView	: false,
					width		: 310,
					height		: 300,
					autoSize	: false,
					scrolling	: 'auto',
					wrapCSS		: 'glossary-popup',
					helpers : {
       						overlay : {
            					opacity : 0.5
        						}
   							 }
				});
		});