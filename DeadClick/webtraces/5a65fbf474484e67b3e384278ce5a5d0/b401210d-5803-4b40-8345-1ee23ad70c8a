function centerChatWin(){
	//request data for centering
	var windowWidth = document.documentElement.clientWidth;
	var windowHeight = document.documentElement.clientHeight;
	var popupHeight = $("#chatDisclaimer").height();
	var popupWidth = $("#chatDisclaimer").width();
	var popupHeightV = $("#chatDisclaimerV").height();
	var popupWidthV = $("#chatDisclaimerV").width();
	var popupHeightD = $("#chatDisclaimerD").height();
	var popupWidthD = $("#chatDisclaimerD").width();
	var popupHeightZ = $("#chatDisclaimerZ").height();
	var popupWidthZ = $("#chatDisclaimerZ").width();
	var popupHeightSS = $("#chatDisclaimerSS").height();
	var popupWidthSS = $("#chatDisclaimerSS").width();
	var popupHeightES = $("#chatDisclaimerES").height();
	var popupWidthES = $("#chatDisclaimerES").width();
	var popupHeightPT = $("#chatDisclaimerPT").height();
	var popupWidthPT = $("#chatDisclaimerPT").width();
	var popupHeightUK = $("#chatDisclaimerUK").height();
	var popupWidthUK = $("#chatDisclaimerUK").width();
	var popupHeightDE = $("#chatDisclaimerDE").height();
	var popupWidthDE = $("#chatDisclaimerDE").width();
	var popupHeightCHS = $("#chatDisclaimerCHS").height();
	var popupWidthCHS = $("#chatDisclaimerCHS").width();
	var popupHeightJP = $("#chatDisclaimerJP").height();
	var popupWidthJP = $("#chatDisclaimerJP").width();
	var popupHeightIN = $("#chatDisclaimerIN").height();
	var popupWidthIN = $("#chatDisclaimerIN").width();

	//centering
	$("#chatDisclaimer").css({
		"position": "fixed",
		"top": (windowHeight/2-popupHeight/2)+20,
		"left": windowWidth/2-popupWidth/2
	});

	$("#chatDisclaimerV").css({
