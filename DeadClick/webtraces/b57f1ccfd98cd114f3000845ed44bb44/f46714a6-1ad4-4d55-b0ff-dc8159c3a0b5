<script type="text/javascript">

   	var topic = {
                 'ccm2Id':     '31084187',
                 'identifier': 'REC-RDAP-GBV-AG-2017',
                 'title':      "Prevent and combat gender-based violence and violence against children ",
                 'status':     'Closed'
     };

 	$(document).ready( function(){
	       $.ajax({
	             type:"POST",
                 url:"/research/participants/api//partnerSearch/topicOrganisationsCount.json",
                 data: JSON.stringify(topic),
                 contentType:"application/json;",
                 dataType:"json",
                 success: function(responseData, textStatus, jqXHR) {
                     $("#results-counter").html(responseData);
			    }
            }).done()

            $("#viewOrganisationsBtn").click(function(){
		        window.location.href = "../../../organisations/active_req_for_partners.html?ccm2Id="+31084187;
	        });
  	});

</script>

