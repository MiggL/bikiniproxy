// JavaScript Document

	ro_opacity=0.2;

	$(document).ready(function(){
	
		//test=$('#home_items_container').height();
		//test=$("#home_items_wrapper").css("height"); 
		

	});
	

	function box_over(box,bg,fg,box_size,dot_colour,do_ro)	{
		
		$("#box_bg_pic_"+box).css("background",bg);
		$("#box_text_"+box).css("color",fg);
		$("#box_dot_pic_"+box).html('<img src="images/'+dot_colour+'_dots_'+box_size+'.png" alt=""/>');
		
		if(do_ro=='yes')	{
			
			$("#box_text_"+box).hide();
			$("#box_ro_text_"+box).css("color",fg);
			$("#box_ro_text_"+box).show();
			
		}
		
	};

	function box_out(box,bg,fg,box_size,dot_colour,do_ro)	{
		
		$("#box_bg_pic_"+box).css("background",bg);
		$("#box_text_"+box).css("color",fg);
		$("#box_dot_pic_"+box).html('<img src="images/'+dot_colour+'_dots_'+box_size+'.png" alt=""/>');
		
		if(do_ro=='yes')	{
			
			$("#box_text_"+box).show();
			$("#box_ro_text_"+box).css("color",fg);
			$("#box_ro_text_"+box).hide();
			
		}
		
	};
	
	function box_image_over(box,fg,box_size,dot_colour,do_ro)	{
		
		$("#box_bg_pic_"+box).css({ opacity: ro_opacity });
		$("#box_text_"+box).css("color",fg);
		$("#box_dot_pic_"+box).html('<img src="images/'+dot_colour+'_dots_'+box_size+'.png" alt=""/>');
		
		if(do_ro=='yes')	{
			
			$("#box_text_"+box).hide();
			$("#box_ro_text_"+box).css("color",fg);
			$("#box_ro_text_"+box).show();
			
		}
		
	};

	function box_image_out(box,fg,box_size,dot_colour,do_ro)	{
		
		$("#box_bg_pic_"+box).css({ opacity: 1 });
		$("#box_text_"+box).css("color",fg);
		$("#box_dot_pic_"+box).html('<img src="images/'+dot_colour+'_dots_'+box_size+'.png" alt=""/>');
		
		if(do_ro=='yes')	{
			
			$("#box_text_"+box).show();
			$("#box_ro_text_"+box).css("color",fg);
			$("#box_ro_text_"+box).hide();
			
		}
		
	};
	
	function expand(expand_item)	{
		
		$("#expanded_text_"+expand_item).slideDown(100);
		$("#expand_"+expand_item).hide();
		$("#contract_"+expand_item).show();
		
	}

	function contract(contract_item)	{
		
		$("#expanded_text_"+contract_item).slideUp(100);
		$("#contract_"+contract_item).hide();
		$("#expand_"+contract_item).show();
		
	}

	function menu_over(menu_item){
		
		$("#g_menu_table_"+menu_item).css("background-image","url('images/g_menu_bg_on.gif')");
		
		
	};
	
	function menu_out(menu_item){
		
		$("#g_menu_table_"+menu_item).css("background-image","url('images/g_menu_bg_off.gif')");
		
		
	};
	
	
	function show_upcoming(u_item, u_total)	{
		
		for (var i=1;i<=u_total;i++){
		
			$("#archive_"+i).hide();
			$("#archive_link_"+i).removeClass("set_dinner_text_on");
			$("#archive_link_"+i).addClass("set_dinner_text");						
			
			if(i==u_item)	{
				
				$("#upcoming_"+i).fadeIn();
				$("#upcoming_link_"+i).removeClass("set_dinner_text");
				$("#upcoming_link_"+i).addClass("set_dinner_text_on");
				
				
			}
			
			if(i!=u_item)	{
				
				$("#upcoming_"+i).hide();
				$("#upcoming_link_"+i).removeClass("set_dinner_text_on");
				$("#upcoming_link_"+i).addClass("set_dinner_text");				
			}	
		
		}
		
	};
	
	
	function show_archive(u_item, u_total)	{
		
		for (var i=1;i<=u_total;i++){
		
			$("#upcoming_"+i).hide();
			$("#upcoming_link_"+i).removeClass("set_dinner_text_on");
			$("#upcoming_link_"+i).addClass("set_dinner_text");	
		
			if(i==u_item)	{
				
				$("#archive_"+i).fadeIn();
				$("#archive_link_"+i).removeClass("set_dinner_text");
				$("#archive_link_"+i).addClass("set_dinner_text_on");
				
				
			}
			
			if(i!=u_item)	{
				
				$("#archive_"+i).hide();
				$("#archive_link_"+i).removeClass("set_dinner_text_on");
				$("#archive_link_"+i).addClass("set_dinner_text");				
			}	
		
		}
		
	};
	
	function expand_archive()	{
		
		$("#archive_content").slideDown(100);
		$("#archive_down").hide();
		$("#archive_up").show();
		
	};
	
	function contract_archive()	{
		
		$("#archive_content").slideUp(100);
		$("#archive_down").show();
		$("#archive_up").hide();
		
	};
	
	
	function caption_over(the_item)	{
		
		$("#caption_"+the_item).css("background-image","url('images/caption_bg_ro.gif')");

	};
	
	function caption_out(the_item)	{
		
		$("#caption_"+the_item).css("background-image","url('images/caption_bg.gif')");

	};
	
	
	function booking_l_over(the_item)	{
		
		$("#booking_image_"+the_item).attr("src","images/booking_l_ro.gif"); 
		
		
	};
	
	function booking_l_out(the_item)	{
		
		$("#booking_image_"+the_item).attr("src","images/booking_l.gif"); 
		
		
	};
	
	function g_box_over(the_item,the_image)	{
		
		$("#g_box_image_"+the_item).attr("src","images/"+the_image+"_ro.gif"); 
		
		
	};
	
	function g_box_out(the_item,the_image)	{
		
		$("#g_box_image_"+the_item).attr("src","images/"+the_image+".gif"); 
		
		
	};
	