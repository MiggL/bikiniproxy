    <script type="text/javascript">
        var $banner = ((function() {
            // jQuery Fake
            var $ = function(slt) { return document.querySelector(slt); }
            var timers = 0;
            var Tween;

            function startAds() {
                loadScripts([
                    '//media.adrcdn.com/scripts/external/tweenlite/1.18.0/TweenMax.min.js'
                ], loadAssets);
            }

            function loadAssets() {
                preloadImages([
                    "bg.jpg",
                    "cta-arrow.png",
                    "cta.png",
                    "logo.png",
                    "txt1.png",
                    "txt2.png"
                ], mainDOM);
            }

            function mainDOM() {
                var ad = $('#ad'),
                    banner = $('#banner');

                addListeners();
                showAds(true, mainFunc);
                function showAds(e, callback) {
                    switch (e) {
                        case true:
                            console.info(e);
                            banner.style.opacity = 1;
                            banner.style.visibility = 'visible';
                            break;
                        case false:
                            console.info(e);
                            break;
                    }

                    if (callback && typeof(callback) === "function") {
                        callback();
                    }
                }
            }

            function addListeners(){
                // clickTag.addEventListener("click", function(){ console.log('Banner Clicked !'); }, false);
            }

            function mainFunc() {
                console.info('Animation Starting ...!');

                Tween = new TimelineLite({
                    onStart: _onStart,
                    onUpdate: _onUpdate,
                    onComplete: _onComplete
                });
                timers += 0.5;
                Tween.add(TweenLite.to(['#txt1'], 1, { autoAlpha: 1 }), timers);
                timers += 1;
                Tween.add(TweenLite.to(['#txt2'], 1, { autoAlpha: 1 }), timers);
                timers += 2;
                Tween.add(TweenLite.to(["#cta"], 1, { autoAlpha: 1 }), timers);
                Tween.add(TweenLite.to(["#cta-arrow"], 0.5, { display: "block" }), timers);

                function _onStart() {}
                function _onUpdate() {}
                function _onComplete() {}
            }

            return startAds;
        })());

        window.addEventListener("load", $banner);
    </script>
