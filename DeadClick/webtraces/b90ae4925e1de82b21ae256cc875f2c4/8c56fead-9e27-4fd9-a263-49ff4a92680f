        "Author": [
          {
            "Content": {
              "AssetImage": null,
              "Description": "",
              "Email": [],
              "Links": null,
              "Name": "Veena Rao \u0026 Eliot Stein",
              "PrimaryVertical": "wwtravel"
            },
            "Metadata": {
              "CreationDateTime": "2018-02-01T17:41:45.176792Z",
              "Entity": "author",
              "Guid": "8fb2cc8f-11be-4ed1-99f8-811dc8769e60",
