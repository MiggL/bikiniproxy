/**
 * @file
 * Field Styling
 */


.field /* Wrapper for any field. */ {
}


/* 
 * Field Lables
 */
.field-label-above /* Above and inline classes are on the field wrapper. */ {
}

.field-label-inline /* When labels are set to inline in field display settings the clearfix class is automatically added. */ {
	margin-bottom: 7px;
}

.field .field-label /* Lables are h2 in Adaptivetheme. Use a strong selector to mitigate unwanted ineritance issues. */ {
  font-size: 1em;
  font-weight: 700;
  font-family: inherit; /* Forces the h2 to inherit the global font family instead of the h2 font family. */
  line-height: inherit;
  margin: 0;
}


/*
 * Field types (Core)
 */

/* Image fields use the <figure> and <figcaption> elements from HTML5. */
.field-type-image {
  margin-bottom: 1.5em; /* The same bottom margin as p, blockquote, ul, ol and dl. */
}

.field .caption  /* The .caption class is applied to all captions regardless of view mode. */ {
}

.field .full-caption /* View mode full. */ {
}

.field .teaser-caption /* View mode teaser. */ {
}

section.field-name-field-bylines .field-type-taxonomy-term-reference {
	margin: 0px;
}

section.field-name-field-bylines div.field-items {
	width: 70%;
	font-weight: bold;
}

section.field-name-field-bylines div.field-items div.field-name-field-byline-author li:after {
	content: ',';
}

section.field-name-field-bylines div.field-name-field-byline-author, section.field-name-field-bylines h2.field-label {
	font-size: 13px;
}

section.field-name-field-bylines div.field-name-field-byline-position {
	float: left; 
	width: 250px;
	text-transform: uppercase;
	font-size: 9px;
	line-height: 22px;
}

div.article-slideshow-caption, div.article-slideshow-credit {
