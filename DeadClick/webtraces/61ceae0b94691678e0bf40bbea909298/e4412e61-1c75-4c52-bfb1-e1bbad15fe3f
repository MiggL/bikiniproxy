function toggleUses(objectID) {

  var object = document.getElementById("usebox" + objectID);  
  state = document.getElementById("usebox" + objectID).style.display;

  if (state == 'none') {
    object.style.display  = 'block';
	document.getElementById("uses" + objectID).className = "arrow_on";

  }
  else if (state != 'none') {
    object.style.display  = 'none';
	document.getElementById("uses" + objectID).className = "arrow_off";	
  }  
}

function toggleSide(objectID) {

  var object = document.getElementById("sidebox" + objectID);  
  state = document.getElementById("sidebox" + objectID).style.display;

  if (state == 'none') {
    object.style.display  = 'block';
	document.getElementById("side" + objectID).className = "arrow_on";

  }
  else if (state != 'none') {
    object.style.display  = 'none';
	document.getElementById("side" + objectID).className = "arrow_off";	
  }  
}

function toggleInteractions(objectID) {

  var object = document.getElementById("interbox" + objectID);  
  state = document.getElementById("interbox" + objectID).style.display;

  if (state == 'none') {
    object.style.display  = 'block';
	document.getElementById("inter" + objectID).className = "arrow_on";

  }
  else if (state != 'none') {
    object.style.display  = 'none';
	document.getElementById("inter" + objectID).className = "arrow_off";	
  }  
}

function GetTransactionID()
{
    var transactionID = Math.round(99999999*Math.random());
    //alert(transactionID);
	return transactionID;
}
