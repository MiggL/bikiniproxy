<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
<script>
function getLatestNNNews() {
$.ajax({
    type: "GET",
	url: 'nn-latest.xml',
	cache: false,
	dataType: "xml",
	success: function(xml){
	    var stories;
		var listitems = '';
		var imageUrl;
		var title;
		var link;
		var description;
		var i = 0;
		
		$(xml).find('item').each(function(){
            if(i<5){
				$(this).find('title').each(function(){
					title = $(this).text();
				});
				$(this).find('link').each(function(){
					link = $(this).text();
				});
				$(this).find('description').each(function(){
					description = $(this).text();
					imageUrl = $(description).find('img').attr('src');
					console.log(imageUrl);
				});
				//imageUrl = $(description).attr('src');
				
				if(typeof imageUrl != 'undefined'){
				    $('#nn-news').append('<li class="story-teaser tiny-teaser" itemscope="" itemtype="http://www.schema.org/NewsArticle"><figure><img src=' + imageUrl + ' width="90px" height="60px" itemprop="image" alt=' + title + '></figure><a marked="1" href=' + link + '><span>Nairobi News</span></a> <br><a marked="1" href=' + link + ' target="_blank" itemprop="url"><n itemprop="headline">' + title + '</n> &nbsp; </a></li>');
				}else{
				    $('#nn-news').append('<li class="story-teaser tiny-teaser" itemscope="" itemtype="http://www.schema.org/NewsArticle"><a marked="1" href=' + link + '><span>Nairobi News</span></a> <br><a marked="1" href=' + link + ' target="_blank" itemprop="url"><n itemprop="headline">' + title + '</n> &nbsp; </a></li>');
				}				
			}
			i++;
		});		
	}
});
}

getLatestNNNews();
</script>
