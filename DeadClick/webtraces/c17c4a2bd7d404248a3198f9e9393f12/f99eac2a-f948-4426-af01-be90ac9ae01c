        <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/swfobject/2.1/swfobject.js"></script>
        <script type="text/javascript">
            var playerVersion = swfobject.getFlashPlayerVersion();
            var flashPlayerVersion = playerVersion.major + '.' + playerVersion.minor + '.' + playerVersion.release;
            var pathRegExp = new RegExp('^(/.{2}(?=/|$))?(/.{2}(?=/|$))?(.*)');
            var pathNameMatch = pathRegExp.exec(document.location.pathname);
            var utag_data = {
	                flash_player_version: flashPlayerVersion,
	                store_language: '/us/en',
	                account_id: 'null',
	                login_status: 'Not Logged in',
	                email: '',
	                event: ['Page View'],
	                page_name: pathNameMatch[3],
	                site_currency: 'USD'
