                      <div class="slice-it"></div>
                    </div>
                    <div class="logo"></div>
                </div>
            </div>
        </div>
        <script type="text/javascript">

            if (!!(window.postMessage && window.JSON && JSON.stringify)) {
                var frame = document.getElementById('klarna-widget-frame'),
                    height,
                    width;

                height = Math.max(
                    frame.scrollHeight,
                    frame.offsetHeight,
                    frame.clientHeight,
                )

                width = Math.max(
                    frame.scrollWidth,
                    frame.offsetWidth,
                    frame.clientWidth,
                )

                window.parent.postMessage(JSON.stringify({
                    action: 'tooltip',
                    type: 'kco',
                    height: height,
                    width: width
                }), '*');
            }

        </script>
    </body>
