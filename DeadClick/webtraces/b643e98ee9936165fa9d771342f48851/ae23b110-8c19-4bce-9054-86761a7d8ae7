<script type="text/javascript">
    $('#latestFromChicago').load('/books/data/latestFromChicago.html');
        $('#blogModule').load('/books/data/blogModule.html?blog=ca29');
        $('#excerptModule').load('/books/data/excerptsModule.html?blog=ca29');

    $('#eventModule').load('/books/data/eventsModule.html?category=ca29');

    $('#journalModule').load('/journals/data/journalsModule.html?category=ca29');

    $(function()
    {
        $('#about_ebook').click(function(){
            window.open('/books/aboutEbooks.html?publisher=pu3430623_3430810', '_blank','top=100, left=100, height=400, width=500, status=no, menubar=no, resizable=no, scrollbars=yes, toolbar=no, location=no, directories=no');
        });

        $('#get_ebook').click(function(){
            window.open('/books/freeEbookOnWebsite.html?isbn=', '_blank','top=100, left=450, height=750, width=1120, status=no, menubar=no, resizable=no, scrollbars=yes, toolbar=no, location=no, directories=no');
        });

        $(".jacket_image").click(function() {
            if ($("#dialog").length > 0) {
                $("#dialog").dialog({
                    modal: true,
                    width: 550
                });
                var largeJacketWidth = $(".large_jacket").width();
                $(".ui-dialog").css({
                    width: largeJacketWidth,
                    marginLeft: (550 - largeJacketWidth) / 2
                });
            }
        });

        $(".dialog-close").click(function() {
            $(".dialog").dialog( "close" );
            $(".ui-dialog").css({
                marginLeft: 0
            });
        });

        $('#tab-list').tabs(
                {
                    show: function(event, ui)
                    {
                        $("#listwrap").removeClass("show").addClass("hide");
                        $("#tab-list").removeClass("hide").addClass("show");
                    }
                });

        $('div.expander').expander({
            slicePoint: 300,
            widow: 2,
            expandEffect: 'fadeIn',
            collapseEffect: 'fadeOut',
            expandText: 'Read More',
            userCollapseText: 'Close'
        });
    });

    function showVendorList() {
        $('.ebookVendorList').slideToggle("slow");
        if ($(".vendor-arrow").attr('src') ==  '/dam/ucp/images/layout/arrow-grey-down.gif') {
            $(".vendor-arrow").attr('src', '/dam/ucp/images/layout/arrow-grey-up.gif' );
        }
        else {
            $(".vendor-arrow").attr('src','/dam/ucp/images/layout/arrow-grey-down.gif' );
        }
    }

    function showebookNote() {
        $('.ebookNote').slideToggle("slow");
        if ($(".ebookNote-arrow").attr('src') ==
                '/dam/ucp/images/layout/arrow-grey-up.gif') {
            $(".ebookNote-arrow").attr('src',
                    '/dam/ucp/images/layout/arrow-grey-down.gif' );
        }
        else {
            $(".ebookNote-arrow").attr('src',
                    '/dam/ucp/images/layout/arrow-grey-up.gif' );
        }
    }



    $(document).ready(function(){
        if ($("#more_text").length) {
            if ($("#more_text:contains('excerpt')") || $("#more_text:contains('feature')")) {
                $("#more_text").detach().insertBefore($(".sub-links"));
                $("#more_text").addClass ("title");
            }
        }
    });

    if ($(window).width() <= 767) {
        var booktabs = document.getElementById ("mobile-booktabs");
        booktabs.insertAdjacentHTML('afterbegin', '<div class="mobile-format-price mobile-tabs mobile-display" id="mobile-format-id">' +
                '<div class="mobile-tabs-header" onclick="expandTab(this)"><span>Prices and Formats</span>' +
                '<img class="expand-arrow" src="/dam/ucp/images/layout/expand-plus-green-icon.png"/> </div>' +
                '<div class="mobile-format-price-div"></div> </div> ');
        $('.buybook .sub-text').detach().appendTo('.mobile-format-price-div');

        var format = document.getElementById ("mobile-format-id");
        format.insertAdjacentHTML('afterend', '<div class="mobile-description mobile-tabs mobile-display" id="mobile-description-id">' +
                '<div class="mobile-tabs-header" onclick="expandTab(this)"><span>Description</span>' +
                '<img class="expand-arrow" src="/dam/ucp/images/layout/expand-plus-green-icon.png"/> </div>' +
                '<div class="mobile-description-div"></div> </div> ');
        $('#slideDetails .info').detach().appendTo('.mobile-description-div');
        $('#slideDetails .info').css('display', 'block');
        $('#slideDetails .desc').removeClass('expander');
        $('#slideDetails .desc').detach().appendTo('.mobile-description-div');
        $('#slideDetails .desc').css('display', 'block');

        if ($("#mobile-content-id").length){
            var content = document.getElementById ("mobile-content-id");
            content.insertAdjacentHTML('afterend', '<div class="mobile-subjects mobile-tabs mobile-display">' +
                    '<div class="mobile-tabs-header" onclick="expandTab(this)"><span>Subjects</span>' +
                    '<img class="expand-arrow" src="/dam/ucp/images/layout/expand-plus-green-icon.png"/> </div>' +
                    '<div class="mobile-subjects-div"></div> </div> ');
            $('.detail-links .linkwrap').detach().appendTo('.mobile-subjects-div');
            $('.detail-links .linkwrap').css('display', 'block');
        }
        else {
            var description = document.getElementById ("mobile-description-id");
            description.insertAdjacentHTML('afterend', '<div class="mobile-subjects mobile-tabs mobile-display">' +
                    '<div class="mobile-tabs-header" onclick="expandTab(this)"><span>Subjects</span>' +
                    '<img class="expand-arrow" src="/dam/ucp/images/layout/expand-plus-green-icon.png"/> </div>' +
                    '<div class="mobile-subjects-div"></div> </div> ');
            $('.detail-links .linkwrap').detach().appendTo('.mobile-subjects-div');
            $('.detail-links .linkwrap').css('display', 'block');
        }
    }

</script>
