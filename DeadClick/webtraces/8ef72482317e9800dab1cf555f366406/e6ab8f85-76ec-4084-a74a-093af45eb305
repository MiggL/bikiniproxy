// <div id="foo" />
// audioplayerobject( "foo", "string");

function audioplayerobject( div, vars ) {
	var container = document.getElementById(div);
	
	container.innerHTML = "<h1>Alternative content</h1><p><a href='http://www.adobe.com/go/getflashplayer'><img src='http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif' alt='Get Adobe Flash player' /></a></p>";
	
	var flashvars = {
		playervars:vars
	};

	var params = {
		menu: "false",
		scale: "noscale",
		wmode:"transparent"
	};

	var attributes = {};
	
	swfobject.embedSWF("/storage/audioplayer/AudioPlayer.swf", div, "500", "65", "10.0.0", "/storage/assets/swf/expressInstall.swf", flashvars, params, attributes);
}


function audioplayerobjectsidebar( div, vars ) {
	var container = document.getElementById(div);
	
	container.innerHTML = "<h1>Alternative content</h1><p><a href='http://www.adobe.com/go/getflashplayer'><img src='http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif' alt='Get Adobe Flash player' /></a></p>";
	
	var flashvars = {
		playervars:vars
	};

	var params = {
		menu: "false",
		scale: "noscale",
		wmode:"transparent"
	};

	var attributes = {};
	
	swfobject.embedSWF("/storage/audioplayer/AudioPlayer.swf", div, "260", "65", "10.0.0", "/storage/assets/swf/expressInstall.swf", flashvars, params, attributes);
}