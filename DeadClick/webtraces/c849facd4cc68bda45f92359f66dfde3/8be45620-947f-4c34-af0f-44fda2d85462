        function loadAdverts() {
            var gptAdSlots = [];
            googletag.cmd.push(function () {
                googletag.pubads().enableAsyncRendering();

                gptAdSlots[0] = googletag.defineSlot('/30709998/eedition.dailyherald.com/native-app', [300, 250], 'divMPU').addService(googletag.pubads());

                var divBottomBanner = document.getElementById("divBottomBanner");
                var divWidth = document.getElementsByClassName("articleContent")[0].offsetWidth;
                if (divWidth > 727) {
                    gptAdSlots[1] = googletag.defineSlot('/30709998/eedition.dailyherald.com/native-app', [728, 90], 'divBanner').addService(googletag.pubads());
                }
                else {
                    gptAdSlots[1] = googletag.defineSlot('/30709998/eedition.dailyherald.com/native-app', [320, 50], 'divBanner').addService(googletag.pubads());

                    var divsArrowText = document.getElementsByClassName("clSpan_ArrowText");
                    for (var i = 0; i < divsArrowText.length; i++) {
                        divsArrowText[i].style.display = "none";
                    }

                    var divMPUAd = document.getElementById("divMPU");
                    divMPUAd.className = "clMPU_Phone";
                }

                googletag.enableServices();
            });

            googletag.cmd.push(function () { googletag.display('divMPU'); });
            googletag.cmd.push(function () { googletag.display('divBanner'); });
        }
    </script>
