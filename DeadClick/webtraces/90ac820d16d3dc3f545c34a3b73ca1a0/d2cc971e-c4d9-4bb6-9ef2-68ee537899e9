function loadMenu(menu_active_item, finalised_active_tab) {

		/*Closed initiatives sub menu*/
		if(menu_active_item === 'closed'){
			
			$('closed_ini_sub_menu_cc' ,'closed_ini_sub_menu_sc', 'closed_ini_sub_menu_ac').invoke('show');
			
			if(finalised_active_tab === 'COLLECTION_CLOSED'){
				$('closed_ini_sub_menu_cc').addClassName('submenuleft_selected');
				
			} else if(finalised_active_tab === 'SUBMITTED') {
				$('closed_ini_sub_menu_sc').addClassName('submenuleft_selected');
				
			} else if(finalised_active_tab === 'ANSWERED'){
				$('closed_ini_sub_menu_ac').addClassName('submenuleft_selected');
			}
		} else {
			$('closed_ini_sub_menu_cc' ,'closed_ini_sub_menu_sc', 'closed_ini_sub_menu_ac').invoke('hide');
		}
		/*Obsolete initiatives*/
		if(menu_active_item === 'obsolete'){
			
			$('obsolete_ini_sub_menu_wd' ,'obsolete_ini_sub_menu_is').invoke('show');
			
			if(finalised_active_tab === 'WITHDRAWN_BY_ORGANISER'){
				$('obsolete_ini_sub_menu_wd').addClassName('submenuleft_selected');
				
			} else if(finalised_active_tab === 'CONDITIONS_NOT_FULFILLED'){
				$('obsolete_ini_sub_menu_is').addClassName('submenuleft_selected');
			}
		} else {
			$('obsolete_ini_sub_menu_wd' ,'obsolete_ini_sub_menu_is').invoke('hide');
		}		
	};
